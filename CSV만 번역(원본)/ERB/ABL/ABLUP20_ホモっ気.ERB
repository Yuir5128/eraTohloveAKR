;게이끼のLVUP判定
@DECIDE_ABLUP20
;条件別にＯＫかダメかを記録する
I = 0
J = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:게이끼 == 0
	A = 200
	B = 50
	C = 0
	D = 1000
ELSEIF ABL:게이끼 == 1
	A = 1000
	B = 200
	C = 0
	D = 5000
ELSEIF ABL:게이끼 == 2
	A = 3000
	B = 500
	C = 1000
	D = 10000
ELSEIF ABL:게이끼 == 3
	A = 8000
	B = 1000
	C = 2000
	D = 15000
ELSEIF ABL:게이끼 == 4
	A = 20000
	B = 2000
	C = 5000
	D = 0
ELSEIF ABL:게이끼 == 5
	A = 25000
	B = 2300
	C = 6000
	D = 0
ELSEIF ABL:게이끼 == 6
	A = 30000
	B = 2600
	C = 8000
	D = 0
ELSEIF ABL:게이끼 == 7
	A = 35000
	B = 3000
	C = 10000
	D = 0
ELSEIF ABL:게이끼 == 8
	A = 40000
	B = 3500
	C = 15000
	D = 0
ELSEIF ABL:게이끼 == 9
	A = 50000
	B = 4000
	C = 20000
	D = 0
ENDIF

;음란
SIF TALENT:음란
	TIMES A , 0.80
;창부
SIF TALENT:창부
	TIMES A , 0.50
;일선을넘지않음
IF TALENT:일선을넘지않음 && (TALENT:연모 == 0 && TALENT:음란 == 0 && TALENT:복종 == 0 && TALENT:친애 == 0 && TALENT:창부 == 0 && TALENT:예속 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
ENDIF

;ＬＶ３から４に上げるときは이상경험必要（素質：[바이]なら無視できる）
IF ABL:게이끼 == 3 && TALENT:바이 == 0
	IF EXP:이상경험 == 0
		;이상경험が不발
		I |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときは이상경험3以上必要（素質：[바이]なら無視できる）
ELSEIF ABL:게이끼 == 4 && TALENT:바이 == 0
	IF EXP:이상경험 < 3
		;이상경험が不발
		I |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときは이상경험5以上必要（素質：[바이]なら無視できる）
ELSEIF ABL:게이끼 == 8 && TALENT:바이 == 0
	IF EXP:이상경험 < 5
		;이상경험が不발
		I |= 2
		J |= 2
	ENDIF
ENDIF

;욕정の珠で上げる
SIF JUEL:욕정 < A
	I |= 1
;굴복の珠で上げる
SIF JUEL:굴복 < C
	I |= 1
;게이경험が必要
SIF EXP:게이경험 < B
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF D > 0
	;쾌Cの珠で上げる
	SIF JUEL:쾌C < D
		J |= 1
	;게이경험が必要
	SIF EXP:게이경험 < B
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ELSE
	J = 256
ENDIF
RETURN 1

