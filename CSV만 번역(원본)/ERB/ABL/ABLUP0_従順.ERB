	;욕정の珠で上げる
	SIF JUEL:욕정 < C
		K |= 1

	PRINTFORM [2] - %PALAMNAME:6%の珠×{C}……

	IF K == 0
		PRINT ＯＫ
	ELSE
		SIF K & 1
			PRINT 珠不발 
		SIF K & 2
			PRINT 経験不발 
	ENDIF
	PRINTL 
ELSE
	K = 256
ENDIF

IF D > 0
	;굴복の珠で上げる
	SIF JUEL:굴복 < D
		L |= 1

	PRINTFORM [3] - %PALAMNAME:7%の珠×{D}……

	IF L == 0
		PRINT ＯＫ
	ELSE
		SIF L & 1
			PRINT 珠不발 
		SIF L & 2
			PRINT 経験不발 
	ENDIF
	PRINTL 
ELSE
	L = 256
ENDIF

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 3) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 条件を満たしていません
	RESTART
ELSEIF K == 256 && RESULT == 2
	RESTART
ELSEIF K != 0 && RESULT == 2
	PRINTL 条件を満たしていません
	RESTART
ELSEIF L == 256 && RESULT == 3
	RESTART
ELSEIF L != 0 && RESULT == 3
	PRINTL 条件を満たしていません
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:순종 += 1

IF RESULT == 0
	JUEL:공포 -= A
ELSEIF RESULT == 1
	JUEL:순종 -= B
ELSEIF RESULT == 2
	JUEL:욕정 -= C
ELSEIF RESULT == 3
	JUEL:굴복 -= D
ENDIF

