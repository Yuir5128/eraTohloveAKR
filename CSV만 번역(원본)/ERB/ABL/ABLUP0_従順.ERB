;순종LvUP判定
@DECIDE_ABLUP0
;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
L = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:순종 == 0
	A = 10
	B = 10
	C = 150
	D = 100
ELSEIF ABL:순종 == 1
	A = 150
	B = 100
	C = 450
	D = 600
ELSEIF ABL:순종 == 2
	A = 500
	B = 300
	C = 1000
	D = 1200
ELSEIF ABL:순종 == 3
	A = 3000
	B = 3000
	C = 0
	D = 0
ELSEIF ABL:순종 == 4
	A = 6000
	B = 6000
	C = 0
	D = 0
ELSEIF ABL:순종 == 5
	A = 8000
	B = 10000
	C = 0
	D = 0
ELSEIF ABL:순종 == 6
	A = 10000
	B = 15000
	C = 0
	D = 0
ELSEIF ABL:순종 == 7
	A = 14000
	B = 20000
	C = 0
	D = 0
ELSEIF ABL:순종 == 8
	A = 18000
	B = 25000
	C = 0
	D = 0
ELSEIF ABL:순종 == 9
	A = 25000
	B = 35000
	C = 0
	D = 0
ENDIF


;연모
SIF TALENT:연모
	TIMES B , 0.80
;친애
SIF TALENT:친애
	TIMES B , 0.60
;복종
SIF TALENT:복종
	TIMES A , 0.70
;예속
SIF TALENT:예속
	TIMES A , 0.40

;일선을넘지않음
IF TALENT:일선을넘지않음 && (!TALENT:연모 && !TALENT:친애 && !TALENT:음란 && !TALENT:창부 && !TALENT:복종 && !TALENT:예속)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
ENDIF

;위압
IF TALENT:위압 && !TALENT:연모 && !TALENT:친애 && !TALENT:음란 && !TALENT:창부 && !TALENT:복종 && !TALENT:예속
	TIMES A , 2.00
	TIMES D , 2.00
ENDIF

;ＬＶ４から５に上げるときは이상경험必要（素質：[겁쟁이][솔직함][연모][친애]なら無視できる）
IF ABL:순종 == 4 && !TALENT:겁쟁이 && !TALENT:솔직함 && !TALENT:연모 && !TALENT:친애
	IF EXP:이상경험 == 0
		;이상경험がない
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
;ＬＶ７から８に上げるときは이상경험3以上必要（素質：[겁쟁이][솔직함][연모][친애]なら無視できる）
ELSEIF ABL:순종 == 7 && !TALENT:겁쟁이 && !TALENT:솔직함 && !TALENT:연모 && !TALENT:친애
	IF EXP:이상경험 < 3
		;이상경험が3未満
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
ENDIF

;공포の珠で上げる
SIF JUEL:공포 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

;순종の珠で上げる
SIF JUEL:순종 < B
	J |= 1

IF J == 0
	Z = 1
ENDIF

IF C
	;욕정の珠で上げる
	SIF JUEL:욕정 < C
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ELSE
	K = 256
ENDIF

IF D
	;굴복の珠で上げる
	SIF JUEL:굴복 < D
		L |= 1

	IF L == 0
		Z = 1
	ENDIF
ELSE
	L = 256
ENDIF
RETURN 1

