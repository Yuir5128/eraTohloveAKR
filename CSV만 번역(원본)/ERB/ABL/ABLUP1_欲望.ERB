Z = 0

IF ABL:욕망 == 0
	A = 1
ELSEIF ABL:욕망 == 1
	A = 20
ELSEIF ABL:욕망 == 2
	A = 1000
ELSEIF ABL:욕망 == 3
	A = 8000
ELSEIF ABL:욕망 == 4
	A = 24000
ELSEIF ABL:욕망 == 5
	A = 30000
ELSEIF ABL:욕망 == 6
	A = 36000
ELSEIF ABL:욕망 == 7
	A = 45000
ELSEIF ABL:욕망 == 8
	A = 55000
ELSEIF ABL:욕망 == 9
	A = 70000
ENDIF

;일선을넘지않음
IF TALENT:일선을넘지않음 && (TALENT:연모 == 0 && TALENT:음란 == 0 && TALENT:복종 == 0 && TALENT:친애 == 0 && TALENT:창부 == 0 && TALENT:예속 == 0)
	TIMES A , 2.00
ENDIF

;ＬＶ４から５に上げるときは이상경험必要（素質：[쾌감에솔직][음란][창부]なら無視できる）
IF ABL:욕망 == 4 && TALENT:쾌감에솔직 == 0 && TALENT:음란 == 0 && TALENT:창부 == 0
	IF EXP:이상경험 == 0
		;이상경험がない
		I |= 2
	ENDIF
;ＬＶ７から８に上げるときは이상경험3以上必要（素質：[쾌감에솔직][음란][창부]なら無視できる）
ELSEIF ABL:욕망 == 7 && TALENT:쾌감에솔직 == 0 && TALENT:음란 == 0 && TALENT:창부 == 0
	IF EXP:이상경험 < 3
		;이상경험が3未満
		I |= 2
	ENDIF
ENDIF

;0になった場合は1にする
SIF A == 0
	A = 1

;욕정の珠で上げる
SIF JUEL:욕정 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF
