;-------------------------------------------------
;밧줄
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM130

IF TEQUIP:촉수
	PRINTL 촉수구속
	STR:0 = 촉수구속
	SELECTCOM = 351
ELSE
	PRINTL 밧줄で緊縛
	STR:0 = 밧줄で緊縛
ENDIF
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:밧줄 == 0
	TEQUIP:밧줄 = 1
ELSE
	TEQUIP:밧줄 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 50
LOSEBASE:기력 += 30

SOURCE:통증 += 300
SOURCE:두려움 += 600
SOURCE:노출 += 200
SOURCE:굴복 += 250
SOURCE:일탈 += 300
SOURCE:반발 += 700

;지하실にいると두려움のソース追加
SIF TEQUIP:지하실
	TIMES SOURCE:두려움 , 1.50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
IF EXP:속박경험 < EXPLV:3
	TIMES LOSEBASE:체력 , 1.00
	TIMES LOSEBASE:기력 , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES LOSEBASE:체력 , 0.90
	TIMES LOSEBASE:기력 , 0.90
ELSE
	TIMES LOSEBASE:체력 , 0.70
	TIMES LOSEBASE:기력 , 0.70
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;촉수がいる場合、全体に촉수の汚れを追加
SIF TEQUIP:촉수
	CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 5
PRINTL 속박경험＋５

;게이경험とか加算
CALL COM_EXP(1)

;촉수소환時、촉수경험のリセットをする
SIF TEQUIP:촉수 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM130
IF TEQUIP:촉수
	PRINTL ＜촉수구속中＞
ELSE
	PRINTL ＜緊縛中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 10

SOURCE:통증 += 150
SOURCE:두려움 += 450
SOURCE:노출 += 100
SOURCE:굴복 += 125
SOURCE:일탈 += 150
SOURCE:반발 += 350

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
A = 60
IF EXP:속박경험 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:기력 += A


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 1
PRINTL 속박경험＋１

;촉수경험加算
SIF TEQUIP:촉수 == 1
	T += 1


RETURN 1

