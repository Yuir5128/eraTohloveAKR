;-------------------------------------------------
;발핥기강제
;強制奉仕系コマンド
;-------------------------------------------------
@COM85

IF TEQUIP:야외플레이 || TEQUIP:지하실
	PRINTL 신발舐め強制
	STR:0 = 신발舐め強制
ELSE
	PRINTL 발핥기강제
	STR:0 = 발핥기강제
ENDIF


;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(순종が高いと命令に従いやすいなど)
CALL COM_ORDER

;実行判定操作
CALL KOJO_DENIAL_PLUS

;合計を表示(32以上で実行)
PRINT  = 
PRINTV A

;難易度上昇
V = 32
SIF TEQUIP:야외플레이 || TEQUIP:지하실
	V += 8

SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

;実行不可입上/実行判定操作
SIF A < V
	CALL KOJO_DENIAL

WAIT

;実行できない
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 100

SOURCE:애정 += 50
;스킨십선호だと애정のソース追加
IF TEQUIP:야외플레이 || TEQUIP:지하실
	SIF TALENT:스킨십선호
		SOURCE:애정 += 50
ENDIF
;복종系陥落済みだと애정のソース追加
SIF TALENT:복종 || TALENT:예속
	TIMES SOURCE:애정 , 1.50

SOURCE:성행동 += 50
SOURCE:성취감 += 200
SOURCE:굴복 += 2000
SOURCE:불결 += 500
SOURCE:일탈 += 800
SOURCE:반발 += 800

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 800

;上のほうで計算した汚れデータ
SOURCE:불결 += Y*10 + 60


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(7)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(복종で2、예속で4）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF

TFLAG:100 = 1

RETURN 1



