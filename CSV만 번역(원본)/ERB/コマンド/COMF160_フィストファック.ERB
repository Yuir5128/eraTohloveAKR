;-------------------------------------------------
;피스트퍽
;フィスト系コマンド
;-------------------------------------------------
@COM160

PRINTL 피스트퍽
STR:0 = 피스트퍽

;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;拘束されてなくて、体格差がある（主人が小さい）ときのみ実行判定を行う
CALL BUILD
IF !TEQUIP:밧줄 && S < 0
	;すべての命令に共通の要素を考慮
	;(순종が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;実行判定操作
	CALL KOJO_DENIAL_PLUS

	;合計を表示(50以上で実行)
	PRINT  = 
	PRINTV A

	V = 50
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	;実行不可입上/実行判定操作
	SIF A < V
		CALL KOJO_DENIAL

	WAIT

	;実行できない
	SIF A < V
		RETURN 0
ENDIF

CALL KOJO_MESSAGE_COM


;스타킹びりびりフラグ
IF TEQUIP:특수2 == 5 || TEQUIP:특수2 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 100
LOSEBASE:기력 += 150

SOURCE:쾌V += 250

;陥落済みだと애정のソース追加
SIF KANRAKU(TARGET)
	SOURCE:애정 += 50

SOURCE:통증 += 800

SOURCE:노출 += 100
SOURCE:굴복 += 1200
SOURCE:일탈 += 1200
SOURCE:반발 += 1200


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;フィストなどのVへの大きな고통は先に処理しておく
;EXP:V경험をみる
IF EXP:V경험 < EXPLV:1
	TIMES SOURCE:통증 , 2.50
	TIMES SOURCE:반발 , 4.00
ELSEIF EXP:V경험 < EXPLV:2
	TIMES SOURCE:통증 , 2.00
	TIMES SOURCE:반발 , 3.50
ELSEIF EXP:V경험 < EXPLV:3
	TIMES SOURCE:통증 , 1.80
	TIMES SOURCE:반발 , 3.00
ELSEIF EXP:V경험 < EXPLV:4
	TIMES SOURCE:통증 , 1.60
	TIMES SOURCE:반발 , 2.50
ELSEIF EXP:V경험 < EXPLV:5
	TIMES SOURCE:통증 , 1.40
	TIMES SOURCE:반발 , 2.00
ELSEIF EXP:V경험 >= EXPLV:5
	TIMES SOURCE:통증 , 1.20
	TIMES SOURCE:반발 , 2.00
ENDIF

;EXP:V확장경험をみる
IF EXP:V확장경험 < EXPLV:1
	TIMES SOURCE:통증 , 1.50
	TIMES SOURCE:반발 , 1.50
ELSEIF EXP:V확장경험 < EXPLV:2
	TIMES SOURCE:통증 , 1.20
	TIMES SOURCE:반발 , 1.20
ELSEIF EXP:V확장경험 < EXPLV:3
	TIMES SOURCE:통증 , 1.00
	TIMES SOURCE:반발 , 1.00
ELSEIF EXP:V확장경험 < EXPLV:4
	TIMES SOURCE:통증 , 0.80
	TIMES SOURCE:반발 , 0.80
ELSEIF EXP:V확장경험 < EXPLV:5
	TIMES SOURCE:통증 , 0.60
	TIMES SOURCE:반발 , 0.60
ELSEIF EXP:V확장경험 >= EXPLV:5
	TIMES SOURCE:통증 , 0.50
	TIMES SOURCE:반발 , 0.50
ENDIF

;PALAM:윤활をみる
IF PALAM:윤활 < PALAMLV:1
	TIMES SOURCE:통증 , 3.00
	TIMES SOURCE:반발 , 2.00
ELSEIF PALAM:윤활 < PALAMLV:2
	TIMES SOURCE:통증 , 2.50
	TIMES SOURCE:반발 , 1.50
ELSEIF PALAM:윤활 < PALAMLV:3
	TIMES SOURCE:통증 , 2.00
	TIMES SOURCE:반발 , 1.20
ELSEIF PALAM:윤활 < PALAMLV:4
	TIMES SOURCE:통증 , 1.50
ELSEIF PALAM:윤활 >= PALAMLV:4
	TIMES SOURCE:통증 , 1.00
ENDIF

;調教者が소인체형
SIF TALENT:PLAYER:소인체형
	TIMES SOURCE:통증 , 0.80



;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;V경험
EXP:V경험 += 25
PRINTL V경험＋２５

;V확장경험
IF EXP:V확장경험 == 0
	EXP:이상경험 += 1
	PRINTL Ｖ拡張初経験で이상경험＋１
ENDIF

EXP:V확장경험 += 5
PRINTL V확장경험＋５

;게이경험とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


