@COM311

PRINTL 비디오감상
STR:0 = 비디오감상
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 50

SOURCE:두려움 += 1000
SOURCE:순종 += 1000
SOURCE:굴복 += 500
SOURCE:일탈 += 200
SOURCE:반발 += 200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 700


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 1

;依存度補正値
TFLAG:30 += 1

;ビデオ所持フラグを減らす
CFLAG:20 -= 1

RETURN 1

