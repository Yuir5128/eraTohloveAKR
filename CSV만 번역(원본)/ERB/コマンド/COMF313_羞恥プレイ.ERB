;-------------------------------------------------
;수치플레이
;シチュエーション別コマンド
;-------------------------------------------------
@COM313

PRINTL 수치플레이
STR:0 = 수치플레이
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:수치플레이 == 1
	TEQUIP:수치플레이 = 0
ELSE
	TEQUIP:수치플레이 = 1
	TFLAG:56 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 50

SOURCE:두려움 += 500
SOURCE:굴복 += 300
SOURCE:일탈 += 100
SOURCE:반발 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 500

;고통を伴わない마조끼及び마조の処理は先にしておく
;마조끼を見る
A = 700
IF ABL:마조끼 == 0
	TIMES A , 0.80
	SOURCE:액체 += 0
	SOURCE:욕정 += 0
ELSEIF ABL:마조끼 == 1
	TIMES A , 1.00
	SOURCE:액체 += 20
	SOURCE:욕정 += 30
ELSEIF ABL:마조끼 == 2
	TIMES A , 1.20
	SOURCE:액체 += 40
	SOURCE:욕정 += 70
ELSEIF ABL:마조끼 == 3
	TIMES A , 1.40
	SOURCE:액체 += 70
	SOURCE:욕정 += 120
ELSEIF ABL:마조끼 == 4
	TIMES A , 1.50
	SOURCE:액체 += 110
	SOURCE:욕정 += 180
ELSEIF ABL:마조끼 == 5
	TIMES A , 1.70
	SOURCE:액체 += 150
	SOURCE:욕정 += 250
ELSEIF ABL:마조끼 == 6
	TIMES A , 1.90
	SOURCE:액체 += 200
	SOURCE:욕정 += 300
ELSEIF ABL:마조끼 == 7
	TIMES A , 2.10
	SOURCE:액체 += 250
	SOURCE:욕정 += 350
ELSEIF ABL:마조끼 == 8
	TIMES A , 2.30
	SOURCE:액체 += 300
	SOURCE:욕정 += 400
ELSEIF ABL:마조끼 == 9
	TIMES A , 2.50
	SOURCE:액체 += 350
	SOURCE:욕정 += 450
ELSEIF ABL:마조끼 >= 10
	TIMES A , 3.00
	SOURCE:액체 += 500
	SOURCE:욕정 += 500
ENDIF
SOURCE:노출 += A


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 3


RETURN 1


