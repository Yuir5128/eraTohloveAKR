;-------------------------------------------------
;회화
;コミュニケーション系コマンド
;-------------------------------------------------
@COM200

PRINTL 회화
STR:0 = 회화
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 10

IF TALENT:친애 || TALENT:창부 || TALENT:예속
	SOURCE:순종 += 2000
	SOURCE:애정 += 200
ELSEIF TALENT:연모 || TALENT:음란 || TALENT:복종
	SOURCE:순종 += 1000
	SOURCE:애정 += 100
ELSE
	SOURCE:순종 += 500
	SOURCE:두려움 += 20
	SOURCE:반발 += 50
ENDIF

SOURCE:일탈 += 100


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:애정경험 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(연모で1、친애で2）
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

