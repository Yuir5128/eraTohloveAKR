;-------------------------------------------------
;정액키스
;食ザー系コマンド
;-------------------------------------------------
@COM412

PRINTL 정액키스
STR:0 = 정액키스

CALL KOJO_MESSAGE_COM

;陥落してれば、実行者が奴隷であるフラグ
SIF KANRAKU(TARGET)
	TFLAG:28 = 1

;-------------------------------------------------
;사정ゲージチェック
;-------------------------------------------------
B = 50

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:사정 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 80

SOURCE:애정 += 100

;스킨십선호だと애정のソース追加
SIF TALENT:스킨십선호
	SOURCE:애정 += 50
;연모系陥落済みだと애정のソース追加
SIF TALENT:연모 || TALENT:친애
	TIMES SOURCE:애정 , 1.50

SOURCE:성행동 += 420
SOURCE:성취감 += 150
SOURCE:굴복 += 1200
SOURCE:일탈 += 500
SOURCE:반발 += 500

;上のほうで計算した汚れデータ
SOURCE:불결 += Y*40 + 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 300

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(5)

;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:애정경험 += 1
ENDIF

;奴隷が고양이혀持ちの場合は、調教者に가학쾌락경험を追加
IF TALENT:고양이혀
	EXP:가학쾌락경험 += 1
	PRINTFORML %EXPNAME:32%＋１
ENDIF

;奉仕快楽フラグ
TFLAG:100 = 1

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(연모で1、친애で2）
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

RETURN 1


