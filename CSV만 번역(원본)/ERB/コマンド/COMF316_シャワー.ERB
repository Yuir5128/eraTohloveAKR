;-------------------------------------------------
;샤워
;シチュエーション別コマンド
;-------------------------------------------------
@COM316

PRINTL 샤워
STR:0 = 샤워

;お湯加減
SIF TEQUIP:샤워 == 0
	CALL YUKAGEN

CALL KOJO_MESSAGE_COM

;着脱の処理　装備時はソース、経験の加算は行わない
IF TEQUIP:샤워 == 1
	TEQUIP:샤워 = 0
ELSE
	TEQUIP:샤워 = 1
ENDIF

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;윤활を1000減らす
IF PALAM:윤활 > 1000
	PALAM:윤활 -= 1000
ELSE
	PALAM:윤활 = 0
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 0


RETURN 1




;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM316
;샤워使用中

PRINTL ＜샤워使用中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 0

;湯加減をみる
IF TFLAG:18 == 1
	LOSEBASE:체력 += 5
	LOSEBASE:기력 += 10
	;SOURSE:7 += 200
ELSEIF TFLAG:18 == 2
	LOSEBASE:체력 += 5
	LOSEBASE:기력 += 10
	;SOURSE:7 += 100
ENDIF

SOURCE:순종 += 100
SOURCE:울굴 += 100
SOURCE:반발 += 50


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;윤활を1000減らす
IF PALAM:윤활 > 1000
	PALAM:윤활 -= 1000
ELSE
	PALAM:윤활 = 0
ENDIF

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0

RETURN 1

