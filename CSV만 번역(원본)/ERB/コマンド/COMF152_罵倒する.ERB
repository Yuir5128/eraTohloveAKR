;-------------------------------------------------
;매도한다
;ＳＭ-ハード系コマンド
;-------------------------------------------------
@COM152

PRINTL 매도한다
STR:0 = 매도한다
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 30

SOURCE:두려움 += 700
SOURCE:굴복 += 100
SOURCE:일탈 += 400
SOURCE:반발 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;고통を伴わない마조끼及び마조の処理は先にしておく
;마조끼を見る
IF ABL:마조끼 == 0
	TIMES SOURCE:굴복 , 0.80
	SOURCE:액체 += 0
	SOURCE:욕정 += 0
ELSEIF ABL:마조끼 == 1
	TIMES SOURCE:굴복 , 1.00
	SOURCE:액체 += 20
	SOURCE:욕정 += 30
	SOURCE:중독충족 += 20
ELSEIF ABL:마조끼 == 2
	TIMES SOURCE:굴복 , 1.20
	SOURCE:액체 += 40
	SOURCE:욕정 += 70
	SOURCE:중독충족 += 50
ELSEIF ABL:마조끼 == 3
	TIMES SOURCE:굴복 , 1.40
	SOURCE:액체 += 70
	SOURCE:욕정 += 120
	SOURCE:중독충족 += 90
ELSEIF ABL:마조끼 == 4
	TIMES SOURCE:굴복 , 1.50
	SOURCE:액체 += 110
	SOURCE:욕정 += 180
	SOURCE:중독충족 += 120
ELSEIF ABL:마조끼 == 5
	TIMES SOURCE:굴복 , 1.70
	SOURCE:액체 += 150
	SOURCE:욕정 += 250
	SOURCE:중독충족 += 150
ELSEIF ABL:마조끼 == 6
	TIMES SOURCE:굴복 , 1.90
	SOURCE:액체 += 200
	SOURCE:욕정 += 300
	SOURCE:중독충족 += 200
ELSEIF ABL:마조끼 == 7
	TIMES SOURCE:굴복 , 2.10
	SOURCE:액체 += 250
	SOURCE:욕정 += 350
	SOURCE:중독충족 += 250
ELSEIF ABL:마조끼 == 8
	TIMES SOURCE:굴복 , 2.30
	SOURCE:액체 += 300
	SOURCE:욕정 += 400
	SOURCE:중독충족 += 300
ELSEIF ABL:마조끼 == 9
	TIMES SOURCE:굴복 , 2.50
	SOURCE:액체 += 350
	SOURCE:욕정 += 450
	SOURCE:중독충족 += 400
ELSEIF ABL:마조끼 >= 10
	TIMES SOURCE:굴복 , 3.00
	SOURCE:액체 += 500
	SOURCE:욕정 += 500
	SOURCE:중독충족 += 500
ENDIF

;마조を見る
IF TALENT:마조
	TIMES SOURCE:굴복 , 2.50
	TIMES SOURCE:액체 , 1.20
	TIMES SOURCE:욕정 , 1.20
ENDIF

;TALENT:반항적をみる
IF TALENT:반항적 == 1
	TIMES SOURCE:중독충족 , 0.75
	TIMES SOURCE:굴복 , 0.75
	TIMES SOURCE:반발 , 1.50
ENDIF

;TALENT:꿋꿋함をみる
IF TALENT:꿋꿋함 == 1
	TIMES SOURCE:중독충족 , 0.75
	TIMES SOURCE:굴복 , 0.75
	TIMES SOURCE:반발 , 2.50
ENDIF

;TALENT:프라이드높음をみる
IF TALENT:프라이드높음 == 1
	TIMES SOURCE:중독충족 , 1.50
	TIMES SOURCE:굴복 , 1.50
	TIMES SOURCE:반발 , 2.00
ENDIF

;TALENT:건방짐をみる
IF TALENT:건방짐 == 1
	TIMES SOURCE:중독충족 , 0.80
	TIMES SOURCE:굴복 , 0.80
	TIMES SOURCE:반발 , 1.80
ENDIF

;TALENT:프라이드낮음をみる
IF TALENT:프라이드낮음 == 1
	TIMES SOURCE:중독충족 , 1.50
	TIMES SOURCE:굴복 , 0.75
	TIMES SOURCE:반발 , 0.75
ENDIF

;밧줄で緊縛中のとき効果上昇
SIF TEQUIP:밧줄
	TIMES SOURCE:굴복 , 1.50
;볼개그装着中のとき効果上昇
SIF TEQUIP:볼개그
	TIMES SOURCE:굴복 , 1.75



;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(1)

;애정경험(減少）
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0 && EXP:애정경험 > 0
	PRINTS EXPNAME:23
	PRINTL -1
	EXP:애정경험 -= 1
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



