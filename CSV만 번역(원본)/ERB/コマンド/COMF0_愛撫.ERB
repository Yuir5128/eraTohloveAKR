;-------------------------------------------------
;애무
;基本系コマンド
;-------------------------------------------------
@COM0

PRINTL 애무
STR:0 = 애무
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 30

SOURCE:쾌C += 30
SOURCE:쾌B += 30

;被り物のときは上から触る
IF TOPS(TARGET)
	TIMES SOURCE:쾌B , 0.60
ELSEIF TEQUIP:속옷（위）
	TIMES SOURCE:쾌B , 0.70
ENDIF
;정조대
IF TEQUIP:속옷（아래） == 5
		TIMES SOURCE:쾌C , 0.00
;ズボン系
ELSEIF BOTTOMS(TARGET) >= 4
	TIMES SOURCE:쾌C , 0.50
ELSEIF TEQUIP:속옷（아래）
	TIMES SOURCE:쾌C , 0.80
ENDIF

SOURCE:애정 += 50
;스킨십선호だと애정のソース追加
SIF TALENT:스킨십선호
	SOURCE:애정 += 50

SOURCE:노출 += 20
SOURCE:불결 += 30
SOURCE:일탈 += 20
SOURCE:반발 += 20

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 20

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(5)

;依存度ベクトル
TFLAG:33 = 2

RETURN 1

