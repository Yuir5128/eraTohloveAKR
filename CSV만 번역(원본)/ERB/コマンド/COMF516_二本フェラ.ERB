;-------------------------------------------------
;二本フェラ
;派生系コマンド
;-------------------------------------------------
@COM516

PRINTL 二本フェラ
STR:0 = 二本フェラ

SELECTCOM = 516
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:28 = 1


;-------------------------------------------------
;사정ゲージチェック（主人）
;-------------------------------------------------
B = 750

CALL SHOOT_GAUGE_CHECK_3PM

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:MASTER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:MASTER:사정 += B

;-------------------------------------------------
;사정ゲージチェック（助손）
;-------------------------------------------------
B = 750

CALL SHOOT_GAUGE_CHECK_3PA

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:ASSI:9 > 0
	B /= 20

SIF PENIS(ASSI)
	BASE:ASSI:사정 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 80
LOSEBASE:기력 += 250

SOURCE:애정 += 200

;스킨십선호だと애정のソース追加
SIF TALENT:스킨십선호
	SOURCE:애정 += 50
SOURCE:성행동 += 400
SOURCE:성취감 += 300
SOURCE:굴복 += 1000
SOURCE:일탈 += 500
SOURCE:반발 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 700

;-------------------------------------------------
;사정チェック１（主人）
;-------------------------------------------------
CALL SAMEN_CHECK(MASTER,1)

;사정時の処理
IF E >= 1
	;사정先タイプの設定
	TFLAG:703 = 4
	;사정先選択の可・不可
	TFLAG:704 = 1
	;汎用的な処理はこの関数で行う
	;（사정ゲージの再計算や사정경험の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;사정チェック２（助손）
;-------------------------------------------------
CALL SAMEN_CHECK(ASSI)

;사정時の処理
IF E >= 1
	;사정先タイプの設定
	TFLAG:703 = 4
	;사정先選択の可・不可
	TFLAG:704 = 0
	;汎用的な処理はこの関数で行う
	;（사정ゲージの再計算や사정경험の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者のＣ、助손のＣの汚れが、奴隷の입と손に移動
STAIN:입 |= STAIN:MASTER:페니스
STAIN:입 |= STAIN:ASSI:페니스
STAIN:손 |= STAIN:MASTER:페니스
STAIN:손 |= STAIN:ASSI:페니스

;調教者と助손の페니스の汚れは綺麗になる
STAIN:MASTER:페니스 = 2
STAIN:ASSI:페니스 = 2


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;펠라경험
EXP:펠라경험 += 2
PRINTFORML %EXPNAME:22%＋２

;게이경험とか加算
CALL COM_EXP(7)

;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:애정경험 += 1
ENDIF

;奴隷が고양이혀持ちの場合は、奴隷に가학쾌락경험を追加
IF TALENT:고양이혀
	EXP:가학쾌락경험 += 1
	PRINTFORML %EXPNAME:32%＋１
ENDIF

;依存度ベクトル
P = PLAYER
IF RELATION:P > 100
	TFLAG:33 = 2
ELSEIF RELATION:P < 100
	TFLAG:33 = 3
ELSE
	TFLAG:33 = 1
ENDIF

;奉仕快楽フラグ
TFLAG:100 = 1

RETURN 1


