;-------------------------------------------------
;미약
;薬品系コマンド
;-------------------------------------------------
@COM301

IF TEQUIP:촉수
	PRINTL 촉수미약
	STR:0 = 촉수미약
ELSE
	PRINTL 미약
	STR:0 = 미약
ENDIF

CALL KOJO_MESSAGE_COM


;使ったアイテム減らす
SIF TEQUIP:촉수 == 0
	ITEM:미약 -= 1

TEQUIP:미약 = 1


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
;調教者が조제지식を持っていれば消費を抑えられる
IF TALENT:PLAYER:조제지식
	LOSEBASE:체력 += 0
	LOSEBASE:기력 += 10
ELSE
	LOSEBASE:체력 += 10
	LOSEBASE:기력 += 50
ENDIF

;미약効果で욕정のアップが2倍になるので実際には+5000
UP:욕정 = 2500
SOURCE:일탈 += 1000


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 0

RETURN 1

