;-------------------------------------------------
;최면촉수
;촉수-拷問系コマンド
;-------------------------------------------------
@COM374

PRINTL 최면촉수
STR:0 = 최면촉수

;エロい夢
IF RAND:3 == 0
	TFLAG:56 = 1
;悪い夢
ELSEIF RAND:2 == 0
	TFLAG:56 = 2
;いい夢
ELSE
	TFLAG:56 = 3
ENDIF

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 500
LOSEBASE:기력 += 1200

;エロい夢
IF TFLAG:56 == 1
	SOURCE:쾌C += 5000
	SIF VAGINA(TARGET)
		SOURCE:쾌V += 5000
	SOURCE:쾌A += 5000
	SOURCE:쾌B += 5000
	SOURCE:성행동 += 1200
	SOURCE:성취감 += 1200
	SOURCE:중독충족 += 1000
	SOURCE:액체 += 2500
	SOURCE:욕정 += 5000
;悪い夢
ELSEIF TFLAG:56 == 2
	SOURCE:통증 += 10000
	SOURCE:두려움 += 15000
	SOURCE:욕정 += 3000
	SOURCE:노출 += 2600
	SOURCE:굴복 += 5000
;いい夢
ELSEIF TFLAG:56 == 3
	SOURCE:애정 += 2000
	SOURCE:성행동 += 650
	SOURCE:성취감 += 800
	SOURCE:중독충족 += 500
	SOURCE:액체 += 1200
	SOURCE:욕정 += 2000
	SOURCE:순종 += 6000
ENDIF

SOURCE:굴복 += 5000
SOURCE:일탈 += 1200
SOURCE:반발 += 1200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 1200

;ストレスいっぱい増加
CFLAG:10 += RAND:35


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF EXP:최면경험 == 0
	EXP:이상경험 += 1
	PRINTL 催眠初経験で이상경험＋1
ENDIF

T = 1

RETURN 1

