;-------------------------------------------------
;거품비비기한다
;シチュエーション別コマンド
;-------------------------------------------------
@COM318

PRINTL 거품비비기한다
STR:0 = 거품비비기한다
CALL KOJO_MESSAGE_COM

;스타킹脱がせる
IF TEQUIP:특수2 == 5 || TEQUIP:특수2 == 6
	TEQUIP:특수2 = 0
	TEQUIP:특수2 = 0
ENDIF

;-------------------------------------------------
;사정ゲージチェック
;-------------------------------------------------
B = 200

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:사정 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 50

SOURCE:쾌B += 100
SOURCE:쾌C += 100

SOURCE:애정 += 300

;스킨십선호だと애정のソース追加
SIF TALENT:스킨십선호
	SOURCE:애정 += 50

SOURCE:두려움 += 20
SOURCE:중독충족 += 100
SOURCE:욕정 += 300
SOURCE:노출 += 60
SOURCE:일탈 += 300
SOURCE:반발 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 800


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(7)

;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:애정경험 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(主人かつ연모、음란、복종で1。친애、창부、예속で2）
IF (TALENT:연모 || TALENT:음란 || TALENT:복종) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:친애 || TALENT:창부 || TALENT:예속) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

