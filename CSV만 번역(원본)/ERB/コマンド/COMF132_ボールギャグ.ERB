;-------------------------------------------------
;볼개그
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM132

PRINTL 볼개그
STR:0 = 볼개그
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:볼개그 == 0
	TEQUIP:볼개그 = 1
ELSE
	TEQUIP:볼개그 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 20

SOURCE:두려움 += 500
;지하실にいると두려움のソース追加
SIF TEQUIP:지하실
	TIMES SOURCE:두려움 , 1.50

SOURCE:노출 += 200
SOURCE:굴복 += 150
SOURCE:일탈 += 100
SOURCE:반발 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
IF EXP:속박경험 < EXPLV:3
	TIMES LOSEBASE:체력 , 1.00
	TIMES LOSEBASE:기력 , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES LOSEBASE:체력 , 0.90
	TIMES LOSEBASE:기력 , 0.90
ELSE
	TIMES LOSEBASE:체력 , 0.70
	TIMES LOSEBASE:기력 , 0.70
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;촉수がいる場合、입に촉수の汚れを追加
SIF TEQUIP:촉수
	CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 2
PRINTL 속박경험＋２

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM132
PRINTL ＜볼개그装備中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 30

SOURCE:두려움 += 250
SOURCE:노출 += 150
SOURCE:굴복 += 75
SOURCE:일탈 += 50
SOURCE:반발 += 150

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
A = 25
IF EXP:속박경험 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:기력 += A

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 1
PRINTL 속박경험＋１

RETURN 1

