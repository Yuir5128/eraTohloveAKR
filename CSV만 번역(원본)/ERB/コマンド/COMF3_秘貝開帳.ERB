;-------------------------------------------------
;비패개장
;자위系コマンド
;-------------------------------------------------
@COM3

PRINTL 비패개장
STR:0 = 비패개장

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(순종が高いと命令に従いやすいなど)
CALL COM_ORDER

;実行判定操作
CALL KOJO_DENIAL_PLUS

;'合計を表示(18以上で実行)
PRINT  = 
PRINTV A

V = 18
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

;実行不可입上/実行判定操作
SIF A < V
	CALL KOJO_DENIAL

WAIT

;実行できない
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1

;스타킹びりびりフラグ
IF TEQUIP:특수2 == 5 || TEQUIP:특수2 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 80

SOURCE:쾌C += 15

SOURCE:성취감 += 20
SOURCE:두려움 += 120
SOURCE:액체 += 10
SOURCE:노출 += 300
SOURCE:굴복 += 450
SOURCE:일탈 += 150
SOURCE:반발 += 150


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 150

;처녀、정조관념
IF TALENT:처녀
	TIMES SOURCE:두려움 , 1.20
	TIMES SOURCE:굴복 , 1.20
	TIMES SOURCE:반발 , 1.20
	SOURCE:노출 += 300
	IF TALENT:정조관념
		TIMES SOURCE:노출 , 2.00
		TIMES SOURCE:일탈 , 2.00
	ENDIF
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;노출벽Lv3以上で자위경험加算
IF ABL:노출벽 >= 3
	EXP:자위경험 += 1
	PRINTL 자위경험＋１
ENDIF

;게이경험とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


