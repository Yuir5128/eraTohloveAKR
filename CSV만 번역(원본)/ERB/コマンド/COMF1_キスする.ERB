;-------------------------------------------------
;키스한다
;基本系コマンド
;-------------------------------------------------
@COM1

PRINTL 키스한다
STR:0 = 키스한다

CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;사정ゲージチェック
;-------------------------------------------------
B = 50

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:사정 += B


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 30

SOURCE:애정 += 100

;스킨십선호だと애정のソース追加
SIF TALENT:스킨십선호
	SOURCE:애정 += 50
;연모系陥落済みだと애정のソース追加
SIF TALENT:연모 || TALENT:친애
	TIMES SOURCE:애정 , 1.50

SOURCE:성행동 += 10
SOURCE:굴복 += 10
SOURCE:일탈 += 10
SOURCE:반발 += 10

;上のほうで計算した汚れデータ
SOURCE:불결 += Y*20 + 10


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 10


;기절から回復させたときは체력기력ボーナス
IF TALENT:기절
	BASE:체력 += 100
	BASE:기력 += 100
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(3)

;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	EXP:애정경험 += 1
	PRINTL EXP:애정경험+１
ENDIF

;奴隷が고양이혀持ちの場合は、調教者に가학쾌락경험を追加
IF TALENT:TARGET:고양이혀
	EXP:가학쾌락경험 += 1
	PRINTL 가학쾌락경험+１
ENDIF

;奉仕快楽フラグ
TFLAG:100 = 1

;依存度ベクトル
TFLAG:33 = 2

;依存度補正値(연모で1、친애で2）
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



