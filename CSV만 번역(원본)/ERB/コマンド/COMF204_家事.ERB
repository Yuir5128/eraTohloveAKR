;-------------------------------------------------
;가사
;コミュニケーション系コマンド
;-------------------------------------------------
@COM204

PRINTL 가사
STR:0 = 가사
CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 50
LOSEBASE:기력 += 20

SOURCE:성행동 += 500
SOURCE:성취감 += 500
SOURCE:반발 += 100


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF (TALENT:연모 || TALENT:친애) && TEQUIP:에이프런
	PRINTL 가사경험＋3
	EXP:가사경험 += 3
	PRINTFORML %EXPNAME:23%＋3
	EXP:애정경험 += 3
ELSE
	PRINTL 가사경험＋1
	EXP:가사경험 += 1
	PRINTFORML %EXPNAME:23%＋1
	EXP:애정경험 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(연모で1、친애で2）
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

