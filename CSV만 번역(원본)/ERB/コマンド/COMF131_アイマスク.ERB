;-------------------------------------------------
;아이마스크
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM131

PRINTL 아이마스크
STR:0 = 아이마스크
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:아이마스크 == 0 || TEQUIP:특수3 != 2
	TEQUIP:아이마스크 = 1
	TEQUIP:특수3 = 2
ELSE
	TEQUIP:아이마스크 = 0
	TEQUIP:특수3 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 20

SOURCE:두려움 += 600
;지하실にいると두려움のソース追加
SIF TEQUIP:지하실
	TIMES SOURCE:두려움 , 1.50

SOURCE:노출 += 100
SOURCE:일탈 += 300
SOURCE:반발 += 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
IF EXP:속박경험 < EXPLV:3
	TIMES LOSEBASE:기력 , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES LOSEBASE:기력 , 0.90
ELSE
	TIMES LOSEBASE:기력 , 0.70
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 2
PRINTL 속박경험＋２

;게이경험とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM131
PRINTL ＜아이마스크装着中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:체력 += 0
LOSEBASE:기력 += 30

SOURCE:두려움 += 150
SOURCE:노출 += 50
SOURCE:일탈 += 150
SOURCE:반발 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;속박경험が高いと消費減少
A = 40
IF EXP:속박경험 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:기력 += A

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:속박경험 += 1
PRINTL 속박경험＋１

RETURN 1


