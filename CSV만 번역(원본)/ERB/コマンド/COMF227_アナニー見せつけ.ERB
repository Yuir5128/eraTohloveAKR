;-------------------------------------------------
;자위과시한다
;見せつけ系コマンド
;-------------------------------------------------
@COM227

PRINTL 자위과시한다
STR:0 = 자위과시한다

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;사정ゲージチェック
;-------------------------------------------------
B = 500

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は사정ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:사정 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 50

SOURCE:액체 =50
SOURCE:욕정 += 150
SOURCE:굴복 += 750
SOURCE:일탈 += 500
SOURCE:반발 += 400

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 400


;-------------------------------------------------
;사정チェック
;-------------------------------------------------
CALL SAMEN_CHECK(PLAYER,1)

;사정時の処理
IF E >= 1
	;사정先タイプの設定
	TFLAG:703 = 0
	;사정先選択の可・不可
	;奴隷が공、かつ主人が수か오메가だと選択不可
	IF TALENT:공 && (TALENT:PLAYER:수 || TALENT:MASTER:오메가)
		TFLAG:704 = 0
	;奴隷の순종と봉사정신발して７以上、もしくは정액중독有なら選択可
	ELSEIF ((ABL:순종+ABL:봉사정신) >= 7) || ABL:정액중독
		TFLAG:704 = 1
	ELSE
		TFLAG:704 = 0
	ENDIF
	;汎用的な処理はこの関数で行う
	;（사정ゲージの再計算や사정경험の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 3

EXP:PLAYER:A경험 += 1
PRINTFORML %CALLNAME:PLAYER%のA경험＋１


RETURN 1


