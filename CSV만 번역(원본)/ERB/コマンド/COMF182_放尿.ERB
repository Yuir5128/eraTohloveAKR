;-------------------------------------------------
;放尿
;スカ系コマンド
;-------------------------------------------------
@COM182

PRINTL 방뇨시킨다
STR:0 = 방뇨시킨다

;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すでに카테터が入ってる場合は、無理矢理出させることができる
IF !TEQUIP:카테터
	;すべての命令に共通の要素を考慮
	;(순종が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;実行判定操作
	CALL KOJO_DENIAL_PLUS

	;合計を表示(30以上で実行)
	PRINT  = 
	PRINTV A

	;難易度上昇
	V = 30
	;ズボン系の하의類を着てる
	SIF TEQUIP:속옷（아래） && TEQUIP:속옷（아래） != 5
		V += 5
	SIF BOTTOMS(TARGET) >= 3
		V += 5

	;목욕탕
	SIF TEQUIP:목욕탕
		V -= 5

	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V
	
	;実行不可입上/実行判定操作
	SIF A < V
		CALL KOJO_DENIAL
	
	WAIT
	
	;実行できない
	SIF A < V
		RETURN 0
ENDIF

CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費체력、기력
LOSEBASE:체력 += 0
LOSEBASE:기력 += 50

SOURCE:두려움 += 200
SOURCE:노출 += 800
SOURCE:굴복 += 500
SOURCE:일탈 += 700
SOURCE:반발 += 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;억압、저항持ちには、억울ソース追加
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 700

;場所によって일탈のソースが上下
;野外
IF TEQUIP:야외플레이
	TIMES SOURCE:일탈 , 2.50
;鏡の前（수치플레이）
ELSEIF TEQUIP:수치플레이
	TIMES SOURCE:일탈 , 1.50
;風呂場
ELSEIF TEQUIP:목욕탕
	TIMES SOURCE:일탈 , 0.50
ENDIF

;放尿時の基本的なソース変動はTRACHECKに入ってるので呼びだして終わり。
CALL DEFECATION_CHECK3


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;게이경험とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(복종で1、예속で2）
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


