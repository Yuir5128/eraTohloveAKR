
;====================================================================
;奴隷に料理を作らせたとき、毒を盛られるかどうか判定
;====================================================================
@LUNCH_JUDGE
TFLAG:14 = 0

;主人との相性が良い、もしくは上位陥落奴隷は毒盛らない
A = NO:MASTER
IF RELATION:A > 100 || TALENT:親愛 || TALENT:娼婦 || TALENT:隷属
	CALL LUNCH_SALE
ELSE
	IF !TALENT:恋慕 && (MARK:反発刻印 >= 2 || ABL:従順 < 5)
		IF TALENT:調合知識 && TALENT:弱味 == 0
			IF RAND:2 == 0
				CALL POISONED_LUNCH
			ELSE
				CALL LUNCH_SALE
			ENDIF
		ELSEIF (TALENT:反抗的 || TALENT:抵抗) && TALENT:弱味 == 0
			IF RAND:3 == 0
				CALL POISONED_LUNCH
			ELSE
				CALL LUNCH_SALE
			ENDIF
		ELSEIF TALENT:調合知識 == 0 && TALENT:弱味
			IF RAND:6 == 0
				CALL POISONED_LUNCH
			ELSE
				CALL LUNCH_SALE
			ENDIF
		ELSE
			IF RAND:4 == 0
				CALL POISONED_LUNCH
			ELSE
				CALL LUNCH_SALE
			ENDIF
		ENDIF
	ELSE
		CALL LUNCH_SALE
	ENDIF
ENDIF

RETURN 0






;====================================================================
;作った料理の成否判定
;どこでも誰にでも使える成否判定。ついでにお値段も判定。
;Pが高いほど料理がうまい。F=1は成功、F=0は失敗。
;====================================================================
@LUNCH_RESULT(ARG)

;料理技能（基礎値）
IF ABL:ARG:料理技能
	P = ABL:ARG:料理技能*12
ELSE
	P = 0
ENDIF

;EXP:調理経験をみる
IF EXP:ARG:家事経験 >= EXPLV:5
	P += 50
ELSEIF EXP:ARG:家事経験 >= EXPLV:4
	P += 40
ELSEIF EXP:ARG:家事経験 >= EXPLV:3
	P += 30
ELSEIF EXP:ARG:家事経験 >= EXPLV:2
	P += 20
ELSEIF EXP:ARG:家事経験 >= EXPLV:1
	P += 10
ELSE
	P += 0
ENDIF

;技巧
IF ABL:ARG:技巧
	P += ABL:ARG:技巧*5
ELSE
	P += 0
ENDIF

;料理上手／メシマズ
IF TALENT:ARG:料理上手
	P += 50
ELSEIF TALENT:ARG:メシマズ
	P -= 100
ENDIF

;プロ級の腕前。失敗することはない。（成功10：失敗0）
IF P >= 200
	F = 1
;かなりうまくなった。稀に失敗する。（成功9：失敗1）
ELSEIF P >= 100
	IF RAND:9 < 1
		F = 0
	ELSE
		F = 1
	ENDIF
;上達してきた。たまに失敗する。（成功6：失敗4）
ELSEIF P >= 50
	IF RAND:9 < 4
		F = 0
	ELSE
		F = 1
	ENDIF
;まだまだ素人。失敗が多い。（成功3：失敗7）
ELSEIF P >= 0
	IF RAND:9 < 7
		F = 0
	ELSE
		F = 1
	ENDIF
;メシマズ。どうにもならない。（成功0：失敗100）
ELSE
	F = 0
ENDIF

;値段の判定
IF P > 0
	M = P
	SIF F
		M *= 2
ELSE
	M = 10
ENDIF



