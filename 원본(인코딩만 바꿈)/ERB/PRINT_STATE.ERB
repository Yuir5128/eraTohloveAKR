;	PRINT 摩擦 0
;	GOTO SHOW_INFO_PALAM_NUM_END
;ENDIF

;↓↓↓↓kMGT表示↓↓↓↓
A = PALAM:A
B = 0
;6桁までノーマル
IF A > 999999
	;kキロ(1000)
	A /= 1000
	B += 1
	IF A > 99999
		;Mメガ(百万)
		A /= 1000
		B += 1
		;2^31 ≒ 21億 = 2100M = 2.1G
		;eramakerの32ビット整数ならメガまでで十分
		IF A > 99999
			;Gギガ(十億)
			A /= 1000
			B += 1
			IF A > 99999
				;Tテラ(兆)
				A /= 1000
				B += 1
				IF A > 99999
					;Pペタ(千兆)
					A /= 1000
					B += 1
					;2^63 ≒ 920京 = 9200P = 9.2E
					;Emueraの64ビット整数でもペタまでで十分
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

;数値の桁数に応じて間隔を調整
SIF A < 10
