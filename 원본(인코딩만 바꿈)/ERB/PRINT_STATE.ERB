@SHOW_INFO_JUEL(ARG)
PRINTL □ 珠 □-----------------------------------------------------------------------
VARSET LOCAL
FOR LOCAL:1, 0, 16
	LOCAL = LOCAL:1
	SIF LOCAL:1 == 15
		LOCAL = 100
	SIF TALENT:ARG:攻め && (LOCAL == 1 || LOCAL == 2)
		CONTINUE
	PRINTFORM 　%PALAMNAME:LOCAL%の珠:{JUEL:ARG:LOCAL,7}
	LOCAL:2++
		IF LOCAL:2 % 4 == 0
		PRINTL 
	ELSE
		PRINT 　
	ENDIF
NEXT
;最後のループで改行してなかったら、ここで改行しておく
SIF LOCAL:2 % 4 != 0
	PRINTL 


