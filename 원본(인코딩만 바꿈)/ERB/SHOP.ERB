	SETBIT FLAG:154, 8
ENDIF
IF !GETBIT(FLAG:154,9) && LOCAL:2 && LOCALS == ""
	LOCALS = [510] たまには共犯者に調教を任せてみるのもいいかもしれません。
	SETBIT FLAG:154, 9
ENDIF
IF !GETBIT(FLAG:154,10) && LOCAL:3 && LOCALS == ""
