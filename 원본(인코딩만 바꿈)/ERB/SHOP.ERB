;TIPS
;-------------------------------------------------------
@SHOW_TIPS
VARSET LOCAL
SIF !FLAG:154
	RETURN 0
LOCALS = 
SETCOLOR 0x8888FF

FOR LOCAL, 0, CHARANUM
	SIF LOCAL == MASTER
		CONTINUE
	SIF 10 * BASE:LOCAL:体力 / MAXBASE:LOCAL:体力 < 8
		LOCAL:1++
	SIF CFLAG:LOCAL:1 == 3
		LOCAL:2++
	SIF CFLAG:LOCAL:1 >= 2
		LOCAL:3++
	SIF CFLAG:LOCAL:1 >= 1
		LOCAL:4++
	SIF KANRAKU2(LOCAL) == 1
		LOCAL:5++
	SIF KANRAKU2(LOCAL) == 2
		LOCAL:6++
	SIF KANRAKU2(LOCAL) == 3
		LOCAL:7++
