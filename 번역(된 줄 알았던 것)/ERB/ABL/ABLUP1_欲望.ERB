	A = 1000
ELSEIF ABL:욕망 == 3
	A = 8000
ELSEIF ABL:욕망 == 4
	A = 24000
ELSEIF ABL:욕망 == 5
	A = 30000
ELSEIF ABL:욕망 == 6
	A = 36000
ELSEIF ABL:욕망 == 7
	A = 45000
ELSEIF ABL:욕망 == 8
	A = 55000
ELSEIF ABL:욕망 == 9
	A = 70000
ENDIF

