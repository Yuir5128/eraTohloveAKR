@DECIDE_ABLUP9
;조건별로 OK인가 안 되는가를 기록한다
I = 0
J = 0
;능력 업 가능하면 1으로 한다
Z = 0

IF ABL:마조끼 == 0
	A = 100
	B = 100
	C = 0
	D = 100
	E = 100
ELSEIF ABL:마조끼 == 1
	A = 500
	B = 500
	C = 0
	D = 500
	E = 300
ELSEIF ABL:마조끼 == 2
	A = 1200
	B = 1000
	C = 0
	D = 1500
	E = 1000
ELSEIF ABL:마조끼 == 3
	A = 0
	B = 0
	C = 10
	D = 3000
	E = 6000
ELSEIF ABL:마조끼 == 4
	A = 0
	B = 0
	C = 50
