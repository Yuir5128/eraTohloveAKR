IF TALENT:마조
	TIMES A ,0.50
	TIMES B ,0.50
	TIMES C ,0.50
	TIMES D ,0.50
	TIMES E ,0.50
ENDIF


;LV3로부터 4에 올릴 때는이상경험필요(소질:[해방]라면 무시할 수 있다)
IF ABL:마조끼 == 3 && TALENT:해방 == 0
	IF EXP:이상경험 == 0
		;이상경험가 불발
		I |= 2
		J |= 2
	ENDIF
;LV4로부터 5에 올릴 때는이상경험 3 이상 필요(소질:[해방]라면 무시할 수 있다)
ELSEIF ABL:마조끼 == 4 && TALENT:해방 == 0
	IF EXP:이상경험 < 3
		;이상경험가 불발
		I |= 2
		J |= 2
	ENDIF
;LV8로부터 9에 올릴 때는이상경험 5 이상 필요(소질:[해방]라면 무시할 수 있다)
ELSEIF ABL:마조끼 == 8 && TALENT:해방 == 0
	IF EXP:이상경험 < 5
		;이상경험가 불발
		I |= 2
		J |= 2
	ENDIF
ENDIF

IF B > 0
	;고통의 구슬로 올린다
	SIF JUEL:고통 < A
		I |= 1
	;욕정의 구슬로 올린다
	SIF JUEL:욕정 < B
		I |= 1

	IF I == 0
		Z = 1
	ENDIF
ELSE
	I = 256
ENDIF

IF D > 0
	;고통의 구슬로 올린다
	SIF JUEL:고통 < D
		J |= 1
	;굴복의 구슬로 올린다
	SIF JUEL:굴복 < E
		J |= 1
	;이 경우고통쾌락경험가 필요한 일이 있어
	SIF EXP:고통쾌락경험 < C
		J |= 2
	;이 경우절정경험가 1이상 필요
	SIF EXP:절정경험 < 1
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
