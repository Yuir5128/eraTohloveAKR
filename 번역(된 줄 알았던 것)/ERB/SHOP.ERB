	PRINTFORML %LOCALS, 20, LEFT%
	MAXBASE:MASTER:사정 = 10000
	IF ASSI >= 0
		LOCALS = %CALLNAME:ASSI%(조수)
		PRINTFORML %LOCALS, 20, LEFT%
		MAXBASE:ASSI:사정 = 10000
	ENDIF
	IF TARGET > 0
		LOCALS = %CALLNAME%(조교중)
		PRINTFORM %LOCALS, 20, LEFT%
		CALL PRINT_BASE_SHOP(TARGET)
		MAXBASE:사정 = 15000
	ENDIF
	SETCOLOR 140, 140, 140
	DRAWLINE
	RESETCOLOR
	CALL STATUS
	
	;현조수＋원조수의 캐릭터수의 확인
	S = 0
	T = 0
	REPEAT CHARANUM
		;육아 방으로 이동하고 있는 캐릭터는 제외
		C = COUNT
		CALL CHECK_CHILD_CARE
		SIF RESULT == 1
			CONTINUE
		SIF CFLAG:COUNT:1 > 1
			S += 1
		SIF CFLAG:COUNT:1 == 1 || CFLAG:COUNT:1 == 2
			T += 1
	REND
	;TIME에 맞은 조교 캐릭터가 있을까
	E = 0
	REPEAT CHARANUM
		;주인과 노예와 노역중의 캐릭터는 배제
		SIF COUNT == MASTER
			CONTINUE
		SIF COUNT == TARGET
			CONTINUE
		;공범자, 마스터는 배제
		SIF CFLAG:COUNT:1 > 2
			CONTINUE
		SIF CFLAG:COUNT:12 > 0
			CONTINUE
		;육아 방으로 이동하고 있는 캐릭터는 제외
		C = COUNT
		CALL CHECK_CHILD_CARE
		SIF RESULT == 1
			CONTINUE
		E += 1
	REND
	SETCOLOR 140, 140, 140
	IF FLAG:5 == 8
		CALL FREE_MISSION_CONFIRM
	ELSEIF !FLAG:5
		PRINTFORML 목표:100일 이내에 코우슈우금 1000000고슈금 벌어,[납금]해
	ENDIF
	CALL SHOW_TIPS
	RESETCOLOR
	SETCOLOR 140, 140, 140
	DRAWLINE
	RESETCOLOR
	LOCAL:1 = 0
	FOR LOCAL, 0, 23
		LOCALS = 
		SELECTCASE LOCAL
			CASE 0
				SIF TARGET >= 0
					LOCALS = [200] 조교
			CASE 1
				SIF CHARANUM > 0
					LOCALS = [210] 도장
			CASE 2
				LOCALS = [220] 휴게
			CASE 3
				SIF CHARANUM < 800 && (FLAG:5 == 0 || FLAG:5 == 9)
					LOCALS = [300] 노예 구입
			CASE 4
				LOCALS = [310] 만물상
			;CASE 5
			;	LOCALS = [320] 부띠크
			;CASE 6
			;	LOCALS = [330] 약방
			;CASE 7
			;	LOCALS = [340] 비밀 숍
			CASE 8
				LOCALS = [400] 노역 지시
			CASE 9
				LOCALS = [450] 노역 지시(성의 중심 건물)
			CASE 10
				SIF E >= 1
					LOCALS = [500] 조교 대상 변경
			CASE 11
				SIF S >= 1
					LOCALS = [510] 주인의 변경
			CASE 12
				SIF S >= 1
					LOCALS = [520] 조수의 변경
			CASE 13
				LOCALS = [550] 능력 상승
			CASE 14
				LOCALS = [600] 콘피그
			CASE 15
				LOCALS = [610] 캐라콘피그
			CASE 16
				LOCALS = [700] 헬프
			;CASE 17
			;	LOCALS = [710] 캐릭터 도감
			;CASE 18
			;	LOCALS = [777] 디버그 메뉴
			CASE 19
				LOCALS = [800] 세이브
			CASE 20
				LOCALS = [900] 로드
			CASE 21
				SIF MONEY >= 1000000 && FLAG:5 == 0 && CFLAG:MASTER:1 == 3
					LOCALS = [910] 납금
			CASE 22
				SIF FLAG:40 == 10
					LOCALS = [920] 강해서 뉴 게임
		ENDSELECT
		IF STRLENS(LOCALS)
			PRINTFORM %LOCALS, 26, LEFT%
			LOCAL:1++
			SIF (LOCAL:1 % 3) == 0
				PRINTL 
		ENDIF
	NEXT
ENDIF
IF TFLAG:0 < 0
	SIF TFLAG:0 == -2
		CALL SHOP_ITEM_LIST(TFLAG:1)
	PRINTBUTTON "[999]돌아온다　　　", 999
	PRINTL 
ENDIF

