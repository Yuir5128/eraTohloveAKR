IF TFLAG:0 == 0
	DRAWLINE
	REPEAT 200
		ITEMSALES:COUNT = 0
	REND
	DRAWLINE
	;미션시에 표시
	IF FLAG:5 == 8
		PRINTFORM FREE MISSION {FLAG:24}　
	ENDIF
	PRINTV DAY
	PRINT 일째
	;주
	IF TIME == 0
		SETCOLOR 0xDBA901
			PRINTFORM 낮
		RESETCOLOR
	ELSE
		SETCOLOR 0x8080ff
			PRINTFORM 밤
		RESETCOLOR
	ENDIF

	;캘린더를 랜덤에 작성합니다
	IF FLAG:80 == 0
		D = RAND:12
		FLAG:80 = D + 1
		D = RAND:31
		SIF FLAG:80 == 2
			D = RAND:28
		SIF FLAG:80 == 4 || FLAG:80 == 6 || FLAG:80 == 9 || FLAG:80 == 11
			D = RAND:30
		FLAG:81 = D + 1
		D = RAND:3
		FLAG:83 = D
	ENDIF
	;월령과 가상 연호 취득해 본다
	CALL LUNAR_AGE
	;윤년용
	D = FLAG:83 % 4
	IF (FLAG:80 == 2 && FLAG:81 == 29 && D != 0) || (FLAG:80 == 2 && FLAG:81 == 30 && D == 0) || ((FLAG:80 == 4 || FLAG:80 == 6 || FLAG:80 == 9 || FLAG:80 == 11) && FLAG:81 == 31) || FLAG:81 == 32
		FLAG:81 = 1
		FLAG:80 += 1
		SIF FLAG:80 == 13
			FLAG:80 = 1
		;월령 계산으로 하는 김에 가상 연호도 취득하고 있으므로 플러스
		SIF FLAG:80 == 1 && FLAG:81 == 1
			FLAG:83 += 1
	ENDIF
	SIF FLAG:82 == 7
		FLAG:82 = 0

	PRINTFORM 　{FLAG:80}월{FLAG:81}일
	SIF FLAG:82 == 0
		PRINT (일)
	SIF FLAG:82 == 1
		PRINT (월)
	SIF FLAG:82 == 2
		PRINT (화)
	SIF FLAG:82 == 3
		PRINT (수)
	SIF FLAG:82 == 4
		PRINT (목)
	SIF FLAG:82 == 5
		PRINT (금)
	SIF FLAG:82 == 6
		PRINT (토)
