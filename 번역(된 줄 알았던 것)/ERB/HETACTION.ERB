;-------------------------------------------------
;요 일주일간의 조수와 조교 대상을 기록하는 기능
;PREVCOM:800이후를 성대하게 사용합니다
;801 ~ 814 =요 일주일간의 노예의 캐릭터 번호
;815 ~ 828 =요 일주일간의 조수
;829보존용
;830보존용
;-------------------------------------------------
@SAVE_MEMBER
;노예의 캐릭터 번호를 등록
I = 814
REPEAT 14
	IF I != 801
		PREVCOM:I = PREVCOM:(I-1)
	ELSE
		IF TARGET > 0
			IF PREVCOM:829 == NO:TARGET
				PREVCOM:801 = NO:TARGET
			ELSE
				PREVCOM:801 = -1
			ENDIF
		ELSE
			PREVCOM:801 = -1
		ENDIF
	ENDIF
	I -= 1
REND
;조수의 캐릭터 번호를 등록
I = 828
REPEAT 14
	IF I != 815
		PREVCOM:I = PREVCOM:(I-1)
	ELSE
		IF ASSI >= 0
			IF PREVCOM:830 == NO:ASSI
				PREVCOM:815 = NO:ASSI
			ELSE
				PREVCOM:815 = -1
			ENDIF
		ELSE
			PREVCOM:815 = -1
		ENDIF
	ENDIF
