;-------------------------------------------------
@SAVE_ACQUAINTANCE_DAILY_LIFE
;B가 등장하지 않는 경우는 무시
IF B > 0 && B < CHARANUM
	G = (2099 + NO:A)
	H = (2099 + NO:B)
	CFLAG:A:H |= 1
	CFLAG:B:G |= 1
	;C가 있다면 C의 분도 판정
	IF C > 0 && C < CHARANUM && C != B
		I = (2099 + NO:C)
		CFLAG:A:I |= 1
		CFLAG:B:I |= 1
		CFLAG:C:G |= 1
		CFLAG:C:H |= 1
	ENDIF
ENDIF

