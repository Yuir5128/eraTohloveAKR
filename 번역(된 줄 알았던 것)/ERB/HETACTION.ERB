	;NEXTCOM:6을 소거 대기에 갱신
	IF RESULT == 1
		NEXTCOM = NEXTCOM:1
		NEXTCOM:6 = -1
		NEXTCOM:5 = 1
	;RETURN 0으로 돌아오면, NEXTCOM:1을 파괴해도 야 다음의 커맨드를 취득
	ELSE
		NEXTCOM:1 = -1
		NEXTCOM:7 += 1
		;A가 높으면 봉사계의 처리
		IF A >= B
			;전의 커맨드가스킨십라면 키스인가 기다리거나 하고 싶어한다
			IF PREVCOM == 202
				IF RAND:3 == 0
					NEXTCOM:1 = 1
				ELSEIF RAND:2 == 0
					NEXTCOM:1 = 203
				ELSE
					CALL NEXT_COM_ORDER_H
				ENDIF
			;기다리거나 하고 있으면 키스나스킨십 하고 싶어한다
			ELSEIF PREVCOM == 203
				IF RAND:3 == 0
					NEXTCOM:1 = 1
				ELSEIF RAND:2 == 0
					NEXTCOM:1 = 202
				ELSE
					CALL NEXT_COM_ORDER_H
				ENDIF
			;그 이외라면 적당
			ELSE
				CALL NEXT_COM_ORDER_H
			ENDIF
		;그렇지 않으면역조교처리
		ELSE
			CALL NEXT_COM_ORDER_G
		ENDIF
	ENDIF
