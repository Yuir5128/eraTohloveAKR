;-------------------------------------------------
;식분한다
;주인마조계 커맨드
;-------------------------------------------------
@COM286

PRINTL 식분한다
STR:0 = 식분한다
;애널자극로부터의 파생의 경우
SIF SELECTCOM == 50
	TFLAG:56 = 1

SELECTCOM = 286
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 150

;애널자극로부터의 파생의 경우
SIF TFLAG:56 == 1
	SOURCE:쾌A += 30

SOURCE:두려움 += 20
SOURCE:노출 += 400
SOURCE:불결 += 500
SOURCE:일탈 += 400
SOURCE:반발 += 300

;애널자극로부터의 파생의 경우
IF TFLAG:56 == 1
	SOURCE:노출 += 700
	SOURCE:굴복 += 800
	SOURCE:불결 += 400
	SOURCE:일탈 += 700
	SOURCE:반발 += 800
ENDIF

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 200

;함락 소질에 의해일탈의 소스가 상하
IF TALENT:연모
	TIMES SOURCE:일탈, 0.70
ELSEIF TALENT:친애
	TIMES SOURCE:일탈, 0.30
ELSEIF TALENT:음란 || TALENT:창부
	TIMES SOURCE:일탈, 0.50
ELSEIF TALENT:복종 || TALENT:예속
	TIMES SOURCE:일탈, 0.30
ENDIF

;새드끼를 본다
IF ABL:새드끼 == 0
	TIMES SOURCE:불결, 1.00
ELSEIF ABL:새드끼 == 1
	TIMES SOURCE:불결, 0.95
	SOURCE:욕정 += 30
ELSEIF ABL:새드끼 == 2
	TIMES SOURCE:불결, 0.80
	SOURCE:욕정 += 50
ELSEIF ABL:새드끼 == 3
	TIMES SOURCE:불결, 0.75
	SOURCE:욕정 += 80
ELSEIF ABL:새드끼 == 4
	TIMES SOURCE:불결, 0.60
	SOURCE:욕정 += 100
ELSEIF ABL:새드끼 == 5
	TIMES SOURCE:불결, 0.50
	SOURCE:욕정 += 150
ELSEIF ABL:새드끼 == 6
	TIMES SOURCE:불결, 0.45
	SOURCE:욕정 += 200
ELSEIF ABL:새드끼 == 7
	TIMES SOURCE:불결, 0.40
	SOURCE:욕정 += 250
ELSEIF ABL:새드끼 == 8
	TIMES SOURCE:불결, 0.35
	SOURCE:욕정 += 300
ELSEIF ABL:새드끼 == 9
	TIMES SOURCE:불결, 0.30
	SOURCE:욕정 += 350
ELSEIF ABL:새드끼 >= 10
	TIMES SOURCE:불결, 0.20
	SOURCE:욕정 += 400
ENDIF

;스캇중독로욕정증, 반발감
IF ABL:스캇중독 == 0
	TIMES SOURCE:일탈, 1.50
ELSEIF ABL:스캇중독 == 1
	SOURCE:중독충족 += 100
	TIMES SOURCE:일탈, 1.00
ELSEIF ABL:스캇중독 == 2
	SOURCE:중독충족 += 200
	TIMES SOURCE:일탈, 0.70
ELSEIF ABL:스캇중독 == 3
	SOURCE:중독충족 += 800
	TIMES SOURCE:일탈, 0.30
ELSEIF ABL:스캇중독 == 4
	SOURCE:중독충족 += 1000
	TIMES SOURCE:일탈, 0.20
ELSE
	SOURCE:중독충족 += 1500
	TIMES SOURCE:일탈, 0.10
ENDIF

;애널자극로부터의 파생의 경우
IF TFLAG:56 == 1
	;조교자의 TALENT:혀놀림를 본다
	SIF TALENT:PLAYER:혀놀림
		TIMES SOURCE:쾌A , 1.50
		
	;조교자의 TALENT:고양이혀를 본다
	SIF TALENT:PLAYER:고양이혀
		TIMES SOURCE:쾌A , 0.75
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;애널자극로부터의 파생의 경우
IF TFLAG:56 == 1
	;배변경험
	PRINTL 식분경험＋2
	EXP:배변경험 += 2

	;조교자가고양이혀소유의 경우는, 조교자에게가학쾌락경험를 추가
	IF TALENT:PLAYER:고양이혀
		EXP:PLAYER:가학쾌락경험 += 1
		PRINTFORML %CALLNAME:PLAYER%의 %EXPNAME:32%＋1
	ENDIF
ENDIF

;식분경험 없으면이상경험
IF EXP:PLAYER:식분경험 == 0
	EXP:PLAYER:이상경험 += 1
	PRINTFORML 식 대변 첫경험으로 %CALLNAME:PLAYER%에이상경험＋1
ENDIF
EXP:PLAYER:식분경험 += 1

;게이경험라든지 가산
CALL COM_EXP(4)

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(주인 또한연모, 친애로 2. 복종, 예속로 3)
IF (TALENT:연모 || TALENT:친애) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:복종 ||TALENT:예속) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

;첫스캇경험 때이상경험
IF EXP:스캇경험 == 0
	EXP:이상경험 += 1
	PRINTL 스카톨로지 첫경험으로이상경험＋1
ENDIF
EXP:스캇경험 += 1
PRINTL 스캇경험＋1

;조교자에게스캇경험
IF EXP:PLAYER:스캇경험 == 0
	EXP:PLAYER:이상경험 += 1
	PRINTFORML 스카톨로지 첫경험으로 %CALLNAME:PLAYER%에이상경험＋1
ENDIF
EXP:PLAYER:스캇경험 += 1
PRINTFORML %CALLNAME:PLAYER%에스캇경험＋1

;스캇중독 4 이상이라면 전부 먹는다
IF ABL:PLAYER:스캇중독 >= 4
	;변의게이지를 0에
	BASE:변의 = 0
	
	;애널자극로부터의 파생이 아닌 경우
	SIF TFLAG:56!= 1
		TFLAG:57 = 0
ELSE
	;애널자극로부터의 파생의 경우
	SIF TFLAG:56 == 1
		CALL DEFECATION_CHECK2
ENDIF

RETURN 1


