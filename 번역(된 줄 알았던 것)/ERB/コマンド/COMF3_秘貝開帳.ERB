;-------------------------------------------------
;비패개장
;자위계 커맨드
;-------------------------------------------------
@COM3

PRINTL 비패개장
STR:0 = 비패개장

;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
;모든 명령에 공통의 요소를 고려
;(순종가 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;실행 판정 조작
CALL KOJO_DENIAL_PLUS

;'합계를 표시(18이상으로 실행)
PRINT  = 
PRINTV A

V = 18
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

;실행 불가대사/실행 판정 조작
SIF A < V
	CALL KOJO_DENIAL

WAIT

;실행 할 수 없다
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;실행자가 노예인 플래그
TFLAG:28 = 1

;스타킹 찌릿찌릿 플래그
IF TEQUIP:특수2 == 5 || TEQUIP:특수2 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 80

SOURCE:쾌C += 15

SOURCE:성취감 += 20
SOURCE:두려움 += 120
SOURCE:액체 += 10
SOURCE:노출 += 300
SOURCE:굴복 += 450
SOURCE:일탈 += 150
SOURCE:반발 += 150


;-------------------------------------------------
;특수소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 150

;처녀, 정조관념
IF TALENT:처녀
	TIMES SOURCE:두려움, 1.20
	TIMES SOURCE:굴복, 1.20
	TIMES SOURCE:반발, 1.20
	SOURCE:노출 += 300
	IF TALENT:정조관념
		TIMES SOURCE:노출, 2.00
		TIMES SOURCE:일탈, 2.00
	ENDIF
ENDIF


;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;노출벽Lv3 이상으로자위경험가산
IF ABL:노출벽 >= 3
	EXP:자위경험 += 1
	PRINTL 자위경험＋1
ENDIF

;게이경험라든지 가산
CALL COM_EXP(1)

;의존도 벡터
TFLAG:33 = 3

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


