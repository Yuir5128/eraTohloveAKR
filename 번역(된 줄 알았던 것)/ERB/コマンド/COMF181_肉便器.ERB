;-------------------------------------------------
;육변기
;스카계 커맨드
;-------------------------------------------------
@COM181

PRINTL 육변기
STR:0 = 육변기

;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;구속되어 있지 않아서, 체격차이가 있다(주인이 작다) 때만 실행 판정을 실시한다
CALL BUILD
IF !TEQUIP:밧줄 && S < 0
	;모든 명령에 공통의 요소를 고려
	;(순종가 높다고 명령에 따르기 쉬운 등)
	CALL COM_ORDER

	;실행 판정 조작
	CALL KOJO_DENIAL_PLUS

	;합계를 표시(32이상으로 실행)
	PRINT  = 
	PRINTV A

	V = 32
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 실행치
	PRINTV V

	;실행 불가입상/실행 판정 조작
	SIF A < V
		CALL KOJO_DENIAL

	WAIT

	;실행 할 수 없다
	SIF A < V
		RETURN 0
ENDIF

CALL KOJO_MESSAGE_COM

;스타킹 찌릿찌릿 플래그
IF TEQUIP:특수 2 == 5 || TEQUIP:특수 2 == 6
	TFLAG:55 = 1
ENDIF

;조교 대상이백버진였던 경우의 상실 플래그
SIF TALENT:백버진
	TFLAG:161 |= 1
;주인의 섹스에 의한백버진상실
SIF TALENT:백버진 && (TALENT:연모 || TALENT:친애) && ASSIPLAY == 0
	TFLAG:163 = 1

;조교자가동정였던 경우의 상실 플래그
SIF TALENT:PLAYER:동정
	TFLAG:160 |= 2


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 30
LOSEBASE:기력 += 100

SOURCE:쾌A += 200

SOURCE:애정 += 50
;스킨십선호라면애정의 소스 추가
SIF TALENT:스킨십선호
	SOURCE:애정 += 50
;복종계 함락이 끝난 상태라면애정의 소스 추가
SIF TALENT:복종 || TALENT:예속
	TIMES SOURCE:애정, 1.50

SOURCE:통증 += 350
SOURCE:두려움 += 200

SOURCE:노출 += 200
SOURCE:굴복 += 400
SOURCE:불결 += 700
SOURCE:일탈 += 500
SOURCE:반발 += 500


;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 500

;A에의고통는 먼저 처리해 둔다
;EXP:A경험를 본다
IF EXP:A경험 < EXPLV:1
	TIMES SOURCE:통증, 3.00
	TIMES SOURCE:반발, 3.00
ELSEIF EXP:A경험 < EXPLV:2
	TIMES SOURCE:통증, 1.20
	TIMES SOURCE:반발, 2.00
ELSEIF EXP:A경험 < EXPLV:3
	TIMES SOURCE:통증, 0.80
	TIMES SOURCE:반발, 1.50
ELSEIF EXP:A경험 < EXPLV:4
	TIMES SOURCE:통증, 0.60
	TIMES SOURCE:반발, 1.20
ELSEIF EXP:A경험 < EXPLV:5
	TIMES SOURCE:통증, 0.40
ELSEIF EXP:A경험 >= EXPLV:5
	TIMES SOURCE:통증, 0.20
ENDIF

;PALAM:윤활를 본다
IF PALAM:윤활 < PALAMLV:1
	TIMES SOURCE:통증, 1.20
	TIMES SOURCE:반발, 2.00
ELSEIF PALAM:윤활 < PALAMLV:2
	TIMES SOURCE:통증, 1.00
	TIMES SOURCE:반발, 1.50
ELSEIF PALAM:윤활 < PALAMLV:3
	TIMES SOURCE:통증, 0.60
ELSEIF PALAM:윤활 < PALAMLV:4
	TIMES SOURCE:통증, 0.30
ELSEIF PALAM:윤활 >= PALAMLV:4
	TIMES SOURCE:통증, 0.20
ENDIF


;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;A경험
EXP:A경험 += 5
PRINTL A경험＋5

;스캇경험를 수반하는 조교에 의한이상경험
IF EXP:스캇경험 == 0
	EXP:이상경험 += 1
	PRINTL 스카톨로지 첫경험으로이상경험＋1
ENDIF
EXP:스캇경험 += 1
PRINTL 스캇경험＋1

;조교자에게스캇경험
IF EXP:PLAYER:스캇경험 == 0
	EXP:PLAYER:이상경험 += 1
	PRINTFORML 스카톨로지 첫경험으로 %CALLNAME:PLAYER%에이상경험＋1
ENDIF
EXP:PLAYER:스캇경험 += 1
PRINTFORML %CALLNAME:PLAYER%에스캇경험＋1

;게이경험라든지 가산
CALL COM_EXP(1)

;변의게이지에 추가
IF BASE:변의 >= 60
	BASE:변의 += 30
ELSE
	BASE:변의 += 60
ENDIF

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



