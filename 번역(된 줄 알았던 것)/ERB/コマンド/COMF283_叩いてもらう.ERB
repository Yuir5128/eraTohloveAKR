;-------------------------------------------------
;얻어맞는다
;주인마조계 커맨드
;-------------------------------------------------
@COM283

PRINTL 얻어맞는다
STR:0 = 얻어맞는다

;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;모든 명령에 공통의 요소를 고려
;(순종가 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;실행 판정 조작
CALL KOJO_DENIAL_PLUS

;합계를 표시(25이상으로 실행)
PRINT  = 
PRINTV A

V = 25
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

;실행 불가대사/실행 판정 조작
SIF A < V
	CALL KOJO_DENIAL

WAIT

;실행 할 수 없다
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;실행자가 노예인 플래그
TFLAG:28 = 1

;-------------------------------------------------
;사정게이지 체크(주인)
;-------------------------------------------------
B = 200

CALL SHOOT_GAUGE_CHECK_MT

;재장전 처리중은사정게이지는 20분의 1에
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:사정 += B


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 30
LOSEBASE:기력 += 50

SOURCE:성행동 += 300
SOURCE:성취감 += 400
SOURCE:두려움 += 400
SOURCE:굴복 += 200
SOURCE:일탈 += 600
SOURCE:반발 += 400

;-------------------------------------------------
;특수소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 600


;-------------------------------------------------
;사정체크
;-------------------------------------------------
CALL SAMEN_CHECK(PLAYER, 1)

;사정시의 처리
IF E >= 1
	;사정처 타입의 설정
	TFLAG:703 = 0
	;사정처 선택의 가능·불가
	TFLAG:704 = 0
	;범용적인 처리는 이 함수로 실시한다
	;(사정게이지의 재계산이나사정경험의 상승과 공통 부분의 표시)
	CALL SAMEN_SHOOT
ENDIF


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;게이경험라든지 가산
CALL COM_EXP(2)

;새드끼에 응해가학쾌락경험
E = 1
L = 0
IF ABL:새드끼 == 0
	E += 0
	L += 0
ELSEIF ABL:새드끼 == 1
	E += 1
	L += 1
ELSEIF ABL:새드끼 == 2
	E += 3
	L += 2
ELSEIF ABL:새드끼 == 3
	E += 5
	L += 3
ELSEIF ABL:새드끼 == 4
	E += 7
	L += 4
ELSEIF ABL:새드끼 >= 5
	E += 9
	L += 5
ENDIF
;조교자의마조끼로가학쾌락경험
IF ABL:PLAYER:9 == 0
	E += 0
	L += 0
ELSEIF ABL:PLAYER:9 == 1
	E += 1
	L += 1
ELSEIF ABL:PLAYER:9 == 2
	E += 2
	L += 3
ELSEIF ABL:PLAYER:9 == 3
	E += 3
	L += 5
ELSEIF ABL:PLAYER:9 == 4
	E += 4
	L += 7
ELSEIF ABL:PLAYER:9 >= 5
	E += 5
	L += 9
ENDIF
PRINT 가학쾌락경험+
PRINTVL E
EXP:가학쾌락경험 += E
IF L > 0
	PRINTFORM %CALLNAME:PLAYER%의
	PRINT 고통쾌락경험+
	PRINTVL L
	EXP:PLAYER:고통쾌락경험 += L
	TFLAG:27 = L
ENDIF

;의존도 벡터
TFLAG:33 = 3

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

;봉사 쾌락 플래그
TFLAG:100 = 1

RETURN 1

