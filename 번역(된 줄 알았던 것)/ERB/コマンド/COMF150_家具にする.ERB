;-------------------------------------------------
;가구로한다
;SM계 커맨드
;-------------------------------------------------
@COM150

PRINTL 가구로한다
STR:0 = 가구로한다


;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;모든 명령에 공통의 요소를 고려
;(순종가 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;실행 판정 조작
CALL KOJO_DENIAL_PLUS

;합계를 표시(40이상으로 실행)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

;실행 불가대사/실행 판정 조작
SIF A < V
	CALL KOJO_DENIAL

WAIT

;실행 할 수 없다
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 100
LOSEBASE:기력 += 50

SOURCE:통증 += 1200

SOURCE:두려움 += 500
SOURCE:굴복 += 500
SOURCE:일탈 += 200
SOURCE:반발 += 1000

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 20

;고통의 파라미터에 의한고통의 소스 증가는 먼저 처리해 둔다
IF PALAM:고통 < PALAMLV:1
	TIMES SOURCE:통증, 1.00
ELSEIF PALAM:고통 < PALAMLV:2
	TIMES SOURCE:통증, 1.50
ELSEIF PALAM:고통 < PALAMLV:3
	TIMES SOURCE:통증, 2.00
ELSEIF PALAM:고통 < PALAMLV:4
	TIMES SOURCE:통증, 2.50
ELSEIF PALAM:고통 >= PALAMLV:4
	TIMES SOURCE:통증, 3.00
ENDIF


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



