;-------------------------------------------------
;애널피스트
;피스트계 커맨드
;-------------------------------------------------
@COM161

PRINTL 애널피스트
STR:0 = 애널피스트

;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;구속되어 있지 않아서, 체격차이가 있다(주인이 작다) 때만 실행 판정을 실시한다
CALL BUILD
IF !TEQUIP:밧줄 && S < 0
	;모든 명령에 공통의 요소를 고려
	;(순종가 높다고 명령에 따르기 쉬운 등)
	CALL COM_ORDER

	;실행 판정 조작
	CALL KOJO_DENIAL_PLUS

	;합계를 표시(55이상으로 실행)
	PRINT  = 
	PRINTV A

	V = 55
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 실행치
	PRINTV V

	;실행 불가대사/실행 판정 조작
	SIF A < V
		CALL KOJO_DENIAL

	WAIT

	;실행 할 수 없다
	SIF A < V
		RETURN 0
ENDIF

CALL KOJO_MESSAGE_COM

;스타킹 찌릿찌릿 플래그
IF TEQUIP:특수 2 == 5 || TEQUIP:특수 2 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 100
LOSEBASE:기력 += 150

SOURCE:쾌A += 250

;함락이 끝난 상태라면애정의 소스 추가
SIF KANRAKU(TARGET)
	SOURCE:애정 += 50

SOURCE:통증 += 1000
SOURCE:노출 += 100
SOURCE:굴복 += 1200
SOURCE:일탈 += 1200
SOURCE:반발 += 1200


;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;피스트 따위의 A에의 큰고통는 먼저 처리해 둔다
;EXP:A경험를 본다
IF EXP:A경험 < EXPLV:1
	TIMES SOURCE:통증, 3.00
	TIMES SOURCE:반발, 4.00
ELSEIF EXP:A경험 < EXPLV:2
	TIMES SOURCE:통증, 2.50
	TIMES SOURCE:반발, 3.50
ELSEIF EXP:A경험 < EXPLV:3
	TIMES SOURCE:통증, 2.40
	TIMES SOURCE:반발, 3.00
ELSEIF EXP:A경험 < EXPLV:4
	TIMES SOURCE:통증, 2.00
	TIMES SOURCE:반발, 2.50
ELSEIF EXP:A경험 < EXPLV:5
	TIMES SOURCE:통증, 1.80
	TIMES SOURCE:반발, 2.00
ELSEIF EXP:A경험 >= EXPLV:5
	TIMES SOURCE:통증, 1.60
	TIMES SOURCE:반발, 1.50
ENDIF

;EXP:A확장경험를 본다
IF EXP:A확장경험 < EXPLV:1
	TIMES SOURCE:통증, 1.50
	TIMES SOURCE:반발, 1.50
ELSEIF EXP:A확장경험 < EXPLV:2
	TIMES SOURCE:통증, 1.20
	TIMES SOURCE:반발, 1.20
ELSEIF EXP:A확장경험 < EXPLV:3
	TIMES SOURCE:통증, 1.00
	TIMES SOURCE:반발, 1.00
ELSEIF EXP:A확장경험 < EXPLV:4
	TIMES SOURCE:통증, 0.80
	TIMES SOURCE:반발, 0.80
ELSEIF EXP:A확장경험 < EXPLV:5
	TIMES SOURCE:통증, 0.60
	TIMES SOURCE:반발, 0.60
ELSEIF EXP:A확장경험 >= EXPLV:5
	TIMES SOURCE:통증, 0.50
	TIMES SOURCE:반발, 0.50
ENDIF

;PALAM:윤활를 본다
IF PALAM:윤활 < PALAMLV:1
	TIMES SOURCE:통증, 3.00
	TIMES SOURCE:반발, 2.00
ELSEIF PALAM:윤활 < PALAMLV:2
	TIMES SOURCE:통증, 2.50
	TIMES SOURCE:반발, 1.50
ELSEIF PALAM:윤활 < PALAMLV:3
	TIMES SOURCE:통증, 2.00
	TIMES SOURCE:반발, 1.20
ELSEIF PALAM:윤활 < PALAMLV:4
	TIMES SOURCE:통증, 1.50
ELSEIF PALAM:윤활 >= PALAMLV:4
	TIMES SOURCE:통증, 1.00
ENDIF

;조교자가소인체형
SIF TALENT:PLAYER:소인체형
	TIMES SOURCE:통증, 0.80


;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;A경험
EXP:A경험 += 25
PRINTL A경험＋25

;A확장경험
IF EXP:A확장경험 == 0 
	EXP:이상경험 += 1
	PRINTL A확장 첫경험으로이상경험＋1
ENDIF

EXP:A확장경험 += 5
PRINTL A확장경험＋5

;게이경험라든지 가산
CALL COM_EXP(1)

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


