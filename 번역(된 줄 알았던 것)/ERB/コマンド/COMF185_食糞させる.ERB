;-------------------------------------------------
;식분시킨다
;스카계 커맨드
;-------------------------------------------------
@COM185

PRINTL 식분시킨다
STR:0 = 식분시킨다

;-------------------------------------------------
;특수 파생 처리
;-------------------------------------------------
;지하실에 있어, 촉수구욕중, 뇨의가 있어촉수애널 하고 있으면 연결 튜브(대)
IF TEQUIP:지하실 && TEQUIP:촉수구욕 && TEQUIP:애널바이브 && BASE:변의 > 60
	CALL COM_ABLE527
	IF RESULT == 1
		TFLAG:56 = 2
		JUMP COM527
	ENDIF
ENDIF

;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;모든 명령에 공통의 요소를 고려
;(순종가 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;실행 판정 조작
CALL KOJO_DENIAL_PLUS

;합계를 표시(60이상으로 실행)
PRINT  = 
PRINTV A

V = 60
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

;실행 불가대사/실행 판정 조작
SIF A < V
	CALL KOJO_DENIAL

WAIT

;실행 할 수 없다
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 150

;굴복, 불결, 일탈, 반발
SOURCE:굴복 += 2000
SOURCE:불결 += 1500
SOURCE:일탈 += 2000
SOURCE:반발 += 2000

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 1500

;스캇중독로중독충족증, 반발와 소비기력감
IF ABL:스캇중독 == 0
	TIMES SOURCE:일탈, 1.50
	LOSEBASE:기력 += 200
ELSEIF ABL:스캇중독 == 1
	SOURCE:중독충족 += 200
	TIMES SOURCE:일탈, 1.00
	LOSEBASE:기력 += 100
ELSEIF ABL:스캇중독 == 2
	SOURCE:중독충족 += 500
	TIMES SOURCE:일탈, 0.50
	LOSEBASE:기력 += 70
ELSEIF ABL:스캇중독 == 3
	SOURCE:중독충족 += 800
	TIMES SOURCE:일탈, 0.20
	LOSEBASE:기력 += 50
ELSEIF ABL:스캇중독 == 4
	SOURCE:중독충족 += 1000
	TIMES SOURCE:일탈, 0.10
	LOSEBASE:기력 += 20
ELSE
	SOURCE:중독충족 += 2000
	TIMES SOURCE:일탈, 0.05
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;식분경험 없으면이상경험
IF EXP:식분경험 == 0
	EXP:이상경험 += 1
	PRINTL 식 대변 첫경험으로이상경험＋1
ENDIF
EXP:식분경험 += 1

;게이경험라든지 가산
CALL COM_EXP(1)

;첫스캇경험 때이상경험
IF EXP:스캇경험 == 0
	EXP:이상경험 += 1
	PRINTL 스카톨로지 첫경험으로이상경험＋1
ENDIF
EXP:스캇경험 += 1
PRINTL 스캇경험＋1

;조교자에게스캇경험
IF EXP:PLAYER:스캇경험 == 0
	EXP:PLAYER:이상경험 += 1
	PRINTFORML 스카톨로지 첫경험으로 %CALLNAME:PLAYER%에이상경험＋1
ENDIF
EXP:PLAYER:스캇경험 += 1
PRINTFORML %CALLNAME:PLAYER%에스캇경험＋1

;스캇중독 4 이상이라면 전부 먹는다
SIF ABL:스캇중독 >= 4
	TFLAG:57 = 0

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

