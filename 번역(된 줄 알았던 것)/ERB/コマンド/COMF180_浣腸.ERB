;-------------------------------------------------
;관장기＋플러그
;스카계 커맨드
;-------------------------------------------------
@COM180

IF TEQUIP:촉수
	PRINTL 촉수관장
	STR:0 = 촉수관장
	SELECTCOM = 352
ELSE
	PRINTL 관장
	STR:0 = 관장
ENDIF

CALL KOJO_MESSAGE_COM

;스타킹 찌릿찌릿 플래그
IF TEQUIP:특수 2 == 5 || TEQUIP:특수 2 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 50

SOURCE:쾌A += 50

SOURCE:통증 += 100
;지하실에 있으면고통의 소스 추가
SIF TEQUIP:지하실
	TIMES SOURCE:통증, 1.50

SOURCE:두려움 += 200

SOURCE:노출 += 300
SOURCE:굴복 += 100
SOURCE:불결 += 500
SOURCE:일탈 += 500
SOURCE:반발 += 500


;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 500

;A에의고통는 먼저 처리해 둔다
;EXP:A경험를 본다
IF EXP:A경험 < EXPLV:1
	TIMES SOURCE:통증, 3.00
	TIMES SOURCE:반발, 3.00
ELSEIF EXP:A경험 < EXPLV:2
	TIMES SOURCE:통증, 1.20
	TIMES SOURCE:반발, 2.00
ELSEIF EXP:A경험 < EXPLV:3
	TIMES SOURCE:통증, 0.80
	TIMES SOURCE:반발, 1.50
ELSEIF EXP:A경험 < EXPLV:4
	TIMES SOURCE:통증, 0.60
	TIMES SOURCE:반발, 1.20
ELSEIF EXP:A경험 < EXPLV:5
	TIMES SOURCE:통증, 0.40
ELSEIF EXP:A경험 >= EXPLV:5
	TIMES SOURCE:통증, 0.20
ENDIF

;PALAM:윤활를 본다
IF PALAM:윤활 < PALAMLV:1
	TIMES SOURCE:통증, 1.20
	TIMES SOURCE:반발, 2.00
ELSEIF PALAM:윤활 < PALAMLV:2
	TIMES SOURCE:통증, 1.00
	TIMES SOURCE:반발, 1.50
ELSEIF PALAM:윤활 < PALAMLV:3
	TIMES SOURCE:통증, 0.60
ELSEIF PALAM:윤활 < PALAMLV:4
	TIMES SOURCE:통증, 0.30
ELSEIF PALAM:윤활 >= PALAMLV:4
	TIMES SOURCE:통증, 0.20
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;촉수가 있는 경우는촉수의 더러움을 추가
SIF TEQUIP:촉수
	CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;A경험
EXP:A경험 += 5
PRINTL A경험＋5

IF EXP:관장경험 == 0
	EXP:이상경험 += 1
	PRINTFORML 첫관장로이상경험＋1
ENDIF
EXP:관장경험 += 1

IF BASE:변의 >= 60
	BASE:변의 += 20
ELSE
	BASE:변의 += 60
ENDIF

;게이경험라든지 가산
CALL COM_EXP(1)

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

RETURN 1


