;-------------------------------------------------
;발핥기강제
;강제 봉사계 커맨드
;-------------------------------------------------
@COM85

IF TEQUIP:야외플레이 || TEQUIP:지하실
	PRINTL 신발 빨고 강제
	STR:0 = 신발 빨고 강제
ELSE
	PRINTL 발핥기강제
	STR:0 = 발핥기강제
ENDIF


;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
;모든 명령에 공통의 요소를 고려
;(순종가 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;실행 판정 조작
CALL KOJO_DENIAL_PLUS

;합계를 표시(32이상으로 실행)
PRINT  = 
PRINTV A

;난이도 상승
V = 32
SIF TEQUIP:야외플레이 || TEQUIP:지하실
	V += 8

SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

;실행 불가입상/실행 판정 조작
SIF A < V
	CALL KOJO_DENIAL

WAIT

;실행 할 수 없다
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;실행자가 노예인 플래그
TFLAG:28 = 1


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 100

SOURCE:애정 += 50
;스킨십선호라면애정의 소스 추가
IF TEQUIP:야외플레이 || TEQUIP:지하실
	SIF TALENT:스킨십선호
		SOURCE:애정 += 50
ENDIF
;복종계 함락이 끝난 상태라면애정의 소스 추가
SIF TALENT:복종 || TALENT:예속
	TIMES SOURCE:애정, 1.50

SOURCE:성행동 += 50
SOURCE:성취감 += 200
SOURCE:굴복 += 2000
SOURCE:불결 += 500
SOURCE:일탈 += 800
SOURCE:반발 += 800

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 800

;위 쪽으로 계산한 더러운 데이터
SOURCE:불결 += Y*10 + 60


;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;게이경험라든지 가산
CALL COM_EXP(7)

;의존도 벡터
TFLAG:33 = 5

;의존도 보정치(복종로 2, 예속로 4)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF

TFLAG:100 = 1

RETURN 1



