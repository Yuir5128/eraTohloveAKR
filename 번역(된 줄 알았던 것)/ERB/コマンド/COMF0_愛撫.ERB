;-------------------------------------------------
;애무
;기본계 커맨드
;-------------------------------------------------
@COM0

PRINTL 애무
STR:0 = 애무
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 5
LOSEBASE:기력 += 30

SOURCE:쾌C += 30
SOURCE:쾌B += 30

;쓰개 때는 위로부터 손댄다
IF TOPS(TARGET)
	TIMES SOURCE:쾌B , 0.60
ELSEIF TEQUIP:속옷（위）
	TIMES SOURCE:쾌B , 0.70
ENDIF
;정조대
IF TEQUIP:속옷（아래） == 5
		TIMES SOURCE:쾌C , 0.00
;바지계
ELSEIF BOTTOMS(TARGET) >= 4
	TIMES SOURCE:쾌C , 0.50
ELSEIF TEQUIP:속옷（아래）
	TIMES SOURCE:쾌C , 0.80
ENDIF

SOURCE:애정 += 50
;스킨십선호라면애정의 소스 추가
SIF TALENT:스킨십선호
	SOURCE:애정 += 50

SOURCE:노출 += 20
SOURCE:불결 += 30
SOURCE:일탈 += 20
SOURCE:반발 += 20

;-------------------------------------------------
;특수소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 20

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;게이경험라든지 가산
CALL COM_EXP(5)

;의존도 벡터
TFLAG:33 = 2

RETURN 1

