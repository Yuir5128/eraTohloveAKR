;-------------------------------------------------
;2 개 페라
;파생계 커맨드
;-------------------------------------------------
@COM516

PRINTL 2 개 페라
STR:0 =2 개 페라

SELECTCOM = 516
CALL KOJO_MESSAGE_COM

;실행자가 노예인 플래그
TFLAG:28 = 1


;-------------------------------------------------
;사정게이지 체크(주인)
;-------------------------------------------------
B = 750

CALL SHOOT_GAUGE_CHECK_3PM

;재장전 처리중은사정게이지는 20분의 1에
SIF CFLAG:MASTER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:MASTER:사정 += B

;-------------------------------------------------
;사정게이지 체크(조수)
;-------------------------------------------------
B = 750

CALL SHOOT_GAUGE_CHECK_3PA

;재장전 처리중은사정게이지는 20분의 1에
SIF CFLAG:ASSI:9 > 0
	B /= 20

SIF PENIS(ASSI)
	BASE:ASSI:사정 += B

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 80
LOSEBASE:기력 += 250

SOURCE:애정 += 200

;스킨십선호라면애정의 소스 추가
SIF TALENT:스킨십선호
	SOURCE:애정 += 50
SOURCE:성행동 += 400
SOURCE:성취감 += 300
SOURCE:굴복 += 1000
SOURCE:일탈 += 500
SOURCE:반발 += 500


;-------------------------------------------------
;특수소스 처리
;-------------------------------------------------
;억압, 저항소유에는, 억울소스 추가
SIF TALENT:억압 || TALENT:저항
	SOURCE:울굴 += 700

;-------------------------------------------------
;사정체크 1(주인)
;-------------------------------------------------
CALL SAMEN_CHECK(MASTER, 1)

;사정시의 처리
IF E >= 1
	;사정처 타입의 설정
	TFLAG:703 = 4
	;사정처 선택의 가능·불가
	TFLAG:704 = 1
	;범용적인 처리는 이 함수로 실시한다
	;(사정게이지의 재계산이나사정경험의 상승과 공통 부분의 표시)
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;사정체크 2(조수)
;-------------------------------------------------
CALL SAMEN_CHECK(ASSI)

;사정시의 처리
IF E >= 1
	;사정처 타입의 설정
	TFLAG:703 = 4
	;사정처 선택의 가능·불가
	TFLAG:704 = 0
	;범용적인 처리는 이 함수로 실시한다
	;(사정게이지의 재계산이나사정경험의 상승과 공통 부분의 표시)
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;조교자의 C, 조수의 C의 더러움이, 노예의입와손에 이동
STAIN:입 |= STAIN:MASTER:페니스
STAIN:입 |= STAIN:ASSI:페니스
STAIN:손 |= STAIN:MASTER:페니스
STAIN:손 |= STAIN:ASSI:페니스

;조교자와 조수의페니스의 더러움은 예쁘게 된다
STAIN:MASTER:페니스 = 2
STAIN:ASSI:페니스 = 2


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;펠라경험
EXP:펠라경험 += 2
PRINTFORML %EXPNAME:22%＋2

;게이경험라든지 가산
CALL COM_EXP(7)

;애정경험
IF (TALENT:연모 == 1 || TALENT:친애 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:애정경험 += 1
ENDIF

;노예가고양이혀소유의 경우는, 노예에게가학쾌락경험를 추가
IF TALENT:고양이혀
	EXP:가학쾌락경험 += 1
	PRINTFORML %EXPNAME:32%＋1
ENDIF

;의존도 벡터
P = PLAYER
IF RELATION:P > 100
	TFLAG:33 = 2
ELSEIF RELATION:P < 100
	TFLAG:33 = 3
ELSE
	TFLAG:33 = 1
ENDIF

;봉사 쾌락 플래그
TFLAG:100 = 1

RETURN 1


