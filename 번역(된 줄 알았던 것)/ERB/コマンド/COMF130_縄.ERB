;-------------------------------------------------
;밧줄
;SM-구속계 커맨드
;-------------------------------------------------
@COM130

IF TEQUIP:촉수
	PRINTL 촉수구속
	STR:0 = 촉수구속
	SELECTCOM = 351
ELSE
	PRINTL 밧줄로 긴박
	STR:0 = 밧줄로 긴박
ENDIF
CALL KOJO_MESSAGE_COM


;착탈의 처리
IF TEQUIP:밧줄 == 0
	TEQUIP:밧줄 = 1
ELSE
	TEQUIP:밧줄 = 0
ENDIF


;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 50
LOSEBASE:기력 += 30

SOURCE:통증 += 300
SOURCE:두려움 += 600
SOURCE:노출 += 200
SOURCE:굴복 += 250
SOURCE:일탈 += 300
SOURCE:반발 += 700

;지하실에 있으면두려움의 소스 추가
SIF TEQUIP:지하실
	TIMES SOURCE:두려움, 1.50

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;속박경험가 높으면 소비 감소
IF EXP:속박경험 < EXPLV:3
	TIMES LOSEBASE:체력, 1.00
	TIMES LOSEBASE:기력, 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES LOSEBASE:체력, 0.90
	TIMES LOSEBASE:기력, 0.90
ELSE
	TIMES LOSEBASE:체력, 0.70
	TIMES LOSEBASE:기력, 0.70
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;촉수가 있는 경우, 전체에촉수의 더러움을 추가
SIF TEQUIP:촉수
	CALL COM_STAIN

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
EXP:속박경험 += 5
PRINTL 속박경험＋5

;게이경험라든지 가산
CALL COM_EXP(1)

;촉수소환시, 촉수경험의 리셋트를 한다
SIF TEQUIP:촉수 == 1
	T = 0

;의존도 벡터
TFLAG:33 = 3

;의존도 보정치(복종로 1, 예속로 2)
IF TALENT:복종 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:예속 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM130
IF TEQUIP:촉수
	PRINTL ＜촉수구속중＞
ELSE
	PRINTL ＜긴박중＞
ENDIF

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 10
LOSEBASE:기력 += 10

SOURCE:통증 += 150
SOURCE:두려움 += 450
SOURCE:노출 += 100
SOURCE:굴복 += 125
SOURCE:일탈 += 150
SOURCE:반발 += 350

;-------------------------------------------------
;특수 소스 처리
;-------------------------------------------------
;속박경험가 높으면 소비 감소
A = 60
IF EXP:속박경험 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:속박경험 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:기력 += A


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
EXP:속박경험 += 1
PRINTL 속박경험＋1

;촉수경험가산
SIF TEQUIP:촉수 == 1
	T += 1


RETURN 1

