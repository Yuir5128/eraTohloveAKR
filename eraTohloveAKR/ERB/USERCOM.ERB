		PRINTLC [998] 리셋트 한다
	SIF LOCAL:0 > 0
		PRINTLC [999] 반복
	IF LOCAL:0 == 0 && FLAG:200 > 0
		PRINTLC [1000] 변경하지 않고 돌아온다
	ELSEIF LOCAL:0 == 0
		PRINTLC [1000] 등록하지 않고 돌아온다
	ELSE
		PRINTLC [1000] 등록한다
	ENDIF
	PRINTL 
	DRAWLINE
	CALL COMSEQ_SHOW
	PRINTFORML 메뉴 {LOCAL:0+1} 
	INPUT
	IF RESULT == 1000 && LOCAL:0 == 0
		RETURN 0
	ELSEIF RESULT < 0 || RESULT > 999
		BREAK
	ENDIF

	;리셋트의 처리
	IF RESULT == 998 && FLAG:200 > 0
		TFLAG:406 = 0
		LOCAL:0 = 0
		LOCAL:2 = 200
		$RESET_MENU_LOOP
		FLAG:(LOCAL:2) = 0
		LOCAL:2 += 1
		SIF LOCAL:2 <= 210
			GOTO RESET_MENU_LOOP
		GOTO INPUT_LOOP
	;반복의 처리
	ELSEIF RESULT == 999 && LOCAL:0 > 0
		;현시점에서 몇 회째까지 등록하고 있을까를 취해 둔다
		LOCAL:1 = LOCAL:0
		;이중 REPEAT는 할 수 없다
		$COMSEQ_REPEAT
		;총수가 10에 이르면 BREAK
		SIF LOCAL:0 > 9
			BREAK
		LOCAL:2 = 201 + LOCAL:0
		LOCAL:3 = 201 + (LOCAL:0 % LOCAL:1)
		FLAG:(LOCAL:2) = FLAG:(LOCAL:3)
		FLAG:200 += 1
		LOCAL:0 += 1
		GOTO COMSEQ_REPEAT
	ENDIF

	;TFLAG:406에 선택한 조교 커맨드를 대입
	TFLAG:406 = RESULT
	;TFLAG:406에 선택한 조교 커맨드를 등록할 수 있는지를 체크
	CALL MULTI_COMABLE, TFLAG:406
	IF RESULT == 0
		PRINTL 등록할 수 없습니다
		GOTO INPUT_LOOP
	ENDIF
	;등록할 수 있는 번호가 입력되었으므로 등록
	LOCAL:1 = 201 + LOCAL:0
	FLAG:(LOCAL:1) = TFLAG:406
	SIF LOCAL:0 == 0
		FLAG:200 = 0
	FLAG:200 += 1
NEXT

PRINTW 조교 메뉴를 등록했습니다
SIF RESULT == 999
	CALL COMSEQ_SHOW
TFLAG:406 = 0
RETURN 0

