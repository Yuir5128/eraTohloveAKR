;-----------------------------------------------------------
@COMSEQSUB_PRINT_COMLIST
FLAG:45 = 0
FOR LOCAL, 0, 350
	CALL MULTI_COMABLE, LOCAL
	;스페이스와 커맨드 번호와 TALENTNAME를 표시한다
	IF RESULT == 1
		PRINTFORMLC [{LOCAL, 3}] %TRAINNAME:LOCAL%
		CALL CHECK_NEWLINE
	ENDIF
NEXT
