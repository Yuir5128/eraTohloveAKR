;-------------------------------------------------
;가사
;커뮤니케이션계 커맨드
;-------------------------------------------------
@COM204

PRINTL 가사
STR:0 = 가사
CALL KOJO_MESSAGE_COM


;실행자가 노예인 플래그
TFLAG:28 = 1

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비체력, 기력
LOSEBASE:체력 += 50
LOSEBASE:기력 += 20

SOURCE:성행동 += 500
SOURCE:성취감 += 500
SOURCE:반발 += 100


;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
IF (TALENT:연모 || TALENT:친애) && TEQUIP:에이프런
	PRINTL 가사경험＋3
	EXP:가사경험 += 3
	PRINTFORML %EXPNAME:23%＋3
	EXP:애정경험 += 3
ELSE
	PRINTL 가사경험＋1
	EXP:가사경험 += 1
	PRINTFORML %EXPNAME:23%＋1
	EXP:애정경험 += 1
ENDIF

;의존도 벡터
TFLAG:33 = 1

;의존도 보정치(연모로 1, 친애로 2)
IF TALENT:연모 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:친애 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

