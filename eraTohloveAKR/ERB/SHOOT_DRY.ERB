
;----------------------------------------------------------------
;드라이 오르가즘 관련의 처리
;역시 필요할까 하고 생각해 만들었다. 테스트 단계.
;정음절정 근처의 처리를 참고로 했습니다.

;기본, BVA감각가 높을 때에, 각 개소에 강한 자극을수와 일정 확률로 드라이에 이릅니다.
;처음으로 드라이에 이른후는, 드라이경험에 의해 그 확률이 한층 더 올라,
;드라이경험가 오르는 것에 따라, BVA를 만지작거렸을 때의사정감이 오르기 힘들어집니다.
;하늘사정는, 막을 수 있다 따위 낼 수 없는 상태에서의사정이며, 드라이 오르가즘은 별개입니다.
;----------------------------------------------------------------
@SHOOT_DRY_CHECK

;ABV절정 하고 있지 않으면 처리하지 않는다
SIF !A && !B && !V
	RETURN 0

;A절정 했지만 A감각 낮으면 처리하지 않는다
SIF A && ABL:A감각 < 4
	RETURN 0
;B절정 했지만 감각 낮으면 처리하지 않는다
SIF B && ABL:B감각 < 4
	RETURN 0
;V절정 했지만 감각 낮으면 처리하지 않는다
SIF B && ABL:V감각 < 4
	RETURN 0


;규정의 회수
P = 50

;노예의 소질에 의해 규정 회수를 증감한다
;꿋꿋함
SIF TALENT:꿋꿋함 == 1
	P += 2
;프라이드높음
SIF TALENT:프라이드높음 == 1
	P += 5
;보수적
SIF TALENT:보수적 == 1
	P += 2
;낙관적
SIF TALENT:낙관적 == 1
	P -= 2
;비관적
SIF TALENT:비관적 == 1
	P += 5
;일선을넘지않음
SIF TALENT:일선을넘지않음 == 1
	P += 5
;억압
SIF TALENT:억압 == 1
	P += 5
;해방
SIF TALENT:해방 == 1
	P -= 2
;독약내성
SIF TALENT:독약내성 == 1
	P += 2
;더러움무시
SIF TALENT:더러움무시 == 1
	P -= 3
;악취둔감
SIF TALENT:악취둔감 == 1
	P -= 2
;악취민감
SIF TALENT:악취민감 == 1
	P += 2
;쾌감에솔직
SIF TALENT:쾌감에솔직 == 1
	P -= 2
;쾌감을부정
SIF TALENT:쾌감을부정 == 1
	P += 5
;중독되기쉬움
SIF TALENT:중독되기쉬움 == 1
	P -= 5
;도착적
SIF TALENT:도착적 == 1
	P -= 2
;남자혐오
SIF TALENT:남자혐오 == 1
	P += 2


IF TALENT:아이사이즈 || !CFLAG:11
	P = 0
ELSEIF TALENT:창부 || TALENT:친애 || TALENT:예속
	P /= 3
ELSEIF TALENT:음란 || TALENT:연모 || TALENT:복종
	P /= 2
ENDIF


;드라이경험가 규정치에 이르고 있으면 드라이 절정
;아이사이즈, 사정한계도 포함된다
IF EXP:드라이경험 >= P && (A || B || V)
	TFLAG:165 = 7
ELSE
	IF A
		IF ABL:A감각 >= 8
			SIF !RAND:3
			TFLAG:165 = 7
		ELSEIF ABL:A감각 == 7
			SIF !RAND:5
			TFLAG:165 = 7
		ELSEIF ABL:A감각 == 6
			SIF !RAND:10
			TFLAG:165 = 7
		ELSEIF ABL:A감각 == 5
			SIF !RAND:20
			TFLAG:165 = 7
		ELSEIF ABL:A감각 >= 3
			SIF !RAND:50
			TFLAG:165 = 7
		ENDIF
	ENDIF
	IF B
		IF ABL:B감각 >= 8
			SIF !RAND:3
			TFLAG:165 = 7
		ELSEIF ABL:B감각 == 7
			SIF !RAND:5
			TFLAG:165 = 7
		ELSEIF ABL:B감각 == 6
			SIF !RAND:10
			TFLAG:165 = 7
		ELSEIF ABL:B감각 == 5
			SIF !RAND:20
			TFLAG:165 = 7
		ELSEIF ABL:B감각 >= 3
			SIF !RAND:50
			TFLAG:165 = 7
		ENDIF
	ENDIF
	IF V
		IF ABL:V감각 >= 8
			SIF !RAND:3
			TFLAG:165 = 7
		ELSEIF ABL:V감각 == 7
			SIF !RAND:5
			TFLAG:165 = 7
		ELSEIF ABL:V감각 == 6
			SIF !RAND:10
			TFLAG:165 = 7
		ELSEIF ABL:V감각 == 5
			SIF !RAND:20
			TFLAG:165 = 7
		ELSEIF ABL:V감각 >= 3
			SIF !RAND:50
			TFLAG:165 = 7
		ENDIF
	ENDIF
ENDIF


