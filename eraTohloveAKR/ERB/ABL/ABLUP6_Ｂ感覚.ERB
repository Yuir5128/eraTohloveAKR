	A = 5000
ELSEIF ABL:B감각 == 4
	A = 15000
ELSEIF ABL:B감각 == 5
	A = 30000
ELSEIF ABL:B감각 == 6
	A = 40000
ELSEIF ABL:B감각 == 7
	A = 50000
ELSEIF ABL:B감각 == 8
	A = 60000
ELSEIF ABL:B감각 == 9
	A = 70000
ENDIF

